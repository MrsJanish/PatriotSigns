<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ============================================================ -->
    <!--                   DATA SOURCE FIELD VIEWS                     -->
    <!-- ============================================================ -->

    <record id="view_data_source_field_tree" model="ir.ui.view">
        <field name="name">ps.data.source.field.tree</field>
        <field name="model">ps.data.source.field</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="model_name" optional="show"/>
                <field name="technical_name" optional="show"/>
            </list>
        </field>
    </record>

    <record id="view_data_source_field_form" model="ir.ui.view">
        <field name="name">ps.data.source.field.form</field>
        <field name="model">ps.data.source.field</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="model_name"/>
                        <field name="technical_name"/>
                    </group>
                    <notebook>
                        <page string="Used In Sources">
                            <field name="data_source_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!--                     DATA SOURCE VIEWS                         -->
    <!-- ============================================================ -->

    <record id="view_data_source_tree" model="ir.ui.view">
        <field name="name">ps.data.source.tree</field>
        <field name="model">ps.data.source</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="field_count" string="# Fields"/>
            </list>
        </field>
    </record>

    <record id="view_data_source_form" model="ir.ui.view">
        <field name="name">ps.data.source.form</field>
        <field name="model">ps.data.source</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Email Bid Invite"/>
                        </h1>
                    </div>
                    <group>
                        <field name="description" placeholder="Describe this data source..."/>
                    </group>
                    <notebook>
                        <page string="Fields" name="fields_page">
                            <field name="field_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="model_name" optional="show"/>
                                    <field name="technical_name" optional="show"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!--                      ACTIONS & MENUS                          -->
    <!-- ============================================================ -->

    <record id="action_data_source" model="ir.actions.act_window">
        <field name="name">Data Sources</field>
        <field name="res_model">ps.data.source</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_data_source_field" model="ir.actions.act_window">
        <field name="name">Data Source Fields</field>
        <field name="res_model">ps.data.source.field</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu: Settings → Technical → Data Sources -->
    <menuitem id="menu_data_sources_root"
              name="Data Sources"
              parent="base.menu_custom"
              sequence="90"/>

    <menuitem id="menu_data_sources"
              name="Sources"
              parent="menu_data_sources_root"
              action="action_data_source"
              sequence="10"/>

    <menuitem id="menu_data_source_fields"
              name="Fields"
              parent="menu_data_sources_root"
              action="action_data_source_field"
              sequence="20"/>

</odoo>
