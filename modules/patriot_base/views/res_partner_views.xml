<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Partner Form Extension -->
    <record id="res_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.patriot</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add industry classification after is_company -->
            <field name="company_type" position="after">
                <separator string="Industry Classification"/>
                <group>
                    <group>
                        <field name="is_gc"/>
                        <field name="is_owner"/>
                    </group>
                    <group>
                        <field name="is_architect"/>
                        <field name="is_sign_supplier"/>
                    </group>
                </group>
            </field>
            
            <!-- Add supplier-specific fields -->
            <page name="sales_purchases" position="after">
                <page string="Sign Industry" name="sign_industry">
                    <group>
                        <group string="External IDs" invisible="not is_gc">
                            <field name="construct_connect_id"/>
                        </group>
                        <group string="GC Details" invisible="not is_gc">
                            <field name="gc_prequalified"/>
                            <field name="default_payment_terms"/>
                        </group>
                    </group>
                    <group>
                        <group string="Supplier Details" invisible="not is_sign_supplier">
                            <field name="supplier_alias"/>
                            <field name="supplier_lead_time"/>
                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <!-- Partner Tree Extension -->
    <record id="res_partner_tree_inherit" model="ir.ui.view">
        <field name="name">res.partner.tree.inherit.patriot</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="phone" position="after">
                <field name="is_gc" optional="show"/>
                <field name="is_owner" optional="hide"/>
                <field name="is_architect" optional="hide"/>
                <field name="is_sign_supplier" optional="show"/>
            </field>
        </field>
    </record>

    <!-- Partner Search Extension -->
    <record id="res_partner_search_inherit" model="ir.ui.view">
        <field name="name">res.partner.search.inherit.patriot</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <filter name="inactive" position="before">
                <separator/>
                <filter name="gc" string="General Contractors" domain="[('is_gc', '=', True)]"/>
                <filter name="owner" string="Owners/Clients" domain="[('is_owner', '=', True)]"/>
                <filter name="architect" string="Architects" domain="[('is_architect', '=', True)]"/>
                <filter name="supplier" string="Sign Suppliers" domain="[('is_sign_supplier', '=', True)]"/>
                <separator/>
            </filter>
        </field>
    </record>
</odoo>
