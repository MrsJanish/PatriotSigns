<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sign Category Tree View -->
    <record id="sign_category_tree" model="ir.ui.view">
        <field name="name">sign.category.tree</field>
        <field name="model">sign.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="is_ada_default"/>
                <field name="is_interior_default"/>
                <field name="subtype_count"/>
                <field name="color" widget="color_picker"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Sign Category Form View -->
    <record id="sign_category_form" model="ir.ui.view">
        <field name="name">sign.category.form</field>
        <field name="model">sign.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(patriot_base.sign_subtype_action)d" type="action"
                                class="oe_stat_button" icon="fa-tags"
                                context="{'search_default_category_id': id}">
                            <field name="subtype_count" widget="statinfo" string="Subtypes"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="code"/>
                        <h1>
                            <field name="code" placeholder="e.g., PAN"/>
                        </h1>
                        <label for="name"/>
                        <h2>
                            <field name="name" placeholder="e.g., Panel / ADA"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Default Settings">
                            <field name="is_ada_default"/>
                            <field name="is_interior_default"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group string="Organization">
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description of this category..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Sign Category Kanban View -->
    <record id="sign_category_kanban" model="ir.ui.view">
        <field name="name">sign.category.kanban</field>
        <field name="model">sign.category</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="code"/>
                <field name="name"/>
                <field name="color"/>
                <field name="subtype_count"/>
                <templates>
                    <t t-name="card">
                        <field name="color" widget="color_picker"/>
                        <div class="oe_kanban_content">
                            <strong><field name="code"/></strong>
                            <div><field name="name"/></div>
                            <div class="text-muted">
                                <field name="subtype_count"/> subtypes
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Sign Category Search View -->
    <record id="sign_category_search" model="ir.ui.view">
        <field name="name">sign.category.search</field>
        <field name="model">sign.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter name="ada" string="ADA Default" domain="[('is_ada_default', '=', True)]"/>
                <filter name="interior" string="Interior Default" domain="[('is_interior_default', '=', True)]"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_ada" string="ADA Default" context="{'group_by': 'is_ada_default'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Sign Category Action -->
    <record id="sign_category_action" model="ir.actions.act_window">
        <field name="name">Sign Categories</field>
        <field name="res_model">sign.category</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define your sign categories
            </p>
            <p>
                Categories classify sign types into groups like Panel/ADA, Plaques, Monument, etc.
            </p>
        </field>
    </record>
</odoo>
