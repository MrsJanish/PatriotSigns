<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sign Subtype Tree View -->
    <record id="sign_subtype_tree" model="ir.ui.view">
        <field name="name">sign.subtype.tree</field>
        <field name="model">sign.subtype</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="display_name_custom"/>
                <field name="category_id"/>
                <field name="is_ada_default"/>
                <field name="has_window_default"/>
                <field name="setup_status" widget="badge"
                       decoration-success="setup_status == 'completed'"
                       decoration-warning="setup_status == 'draft'"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Sign Subtype Form View -->
    <record id="sign_subtype_form" model="ir.ui.view">
        <field name="name">sign.subtype.form</field>
        <field name="model">sign.subtype</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Rm_Num_Insert"/>
                        </h1>
                        <label for="display_name_custom"/>
                        <h3>
                            <field name="display_name_custom" placeholder="e.g., Room Number, Insert"/>
                        </h3>
                    </div>
                    <group>
                        <group string="Classification">
                            <field name="category_id"/>
                            <field name="setup_status" widget="radio"/>
                        </group>
                        <group string="Default Characteristics">
                            <field name="is_ada_default"/>
                            <field name="has_window_default"/>
                            <field name="is_illuminated_default"/>
                        </group>
                    </group>
                    <group>
                        <group string="Copy Defaults">
                            <field name="default_copy_pattern" placeholder="e.g., [room_name] or [per drawing]"/>
                        </group>
                        <group string="Organization">
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Sign Subtype Search View -->
    <record id="sign_subtype_search" model="ir.ui.view">
        <field name="name">sign.subtype.search</field>
        <field name="model">sign.subtype</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="display_name_custom"/>
                <field name="category_id"/>
                <filter name="ada" string="ADA Default" domain="[('is_ada_default', '=', True)]"/>
                <filter name="completed" string="Completed" domain="[('setup_status', '=', 'completed')]"/>
                <filter name="draft" string="Draft" domain="[('setup_status', '=', 'draft')]"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="1" string="Group By">
                    <filter name="group_category" string="Category" context="{'group_by': 'category_id'}"/>
                    <filter name="group_status" string="Status" context="{'group_by': 'setup_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Sign Subtype Action -->
    <record id="sign_subtype_action" model="ir.actions.act_window">
        <field name="name">Sign Subtypes</field>
        <field name="res_model">sign.subtype</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_category': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define sign subtype templates
            </p>
            <p>
                Subtypes are reusable templates like "Room Number, Insert" or "Evacuation Plan" 
                that define default characteristics for sign types.
            </p>
        </field>
    </record>
</odoo>
