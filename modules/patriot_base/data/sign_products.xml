<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- 
            Accurate Material Pricing based on actual costs from panel_pricing module.
            
            Costing extracted from: panel_pricing/models/sale_order_line.py
            
            Pricing Strategy:
            - Cost = Actual material cost
            - Sell = Cost * 1.15 (overhead) * 2.4 (markup) = ~2.76x markup
            - Rounded to nearest $5 for simplicity
            
            Shop Rate: $75/hr
            Install Rate: $100/hr
        -->

        <!-- ================================================================= -->
        <!-- PRODUCT CATEGORIES -->
        <!-- ================================================================= -->
        
        <record id="product_category_signs" model="product.category">
            <field name="name">Signs</field>
        </record>

        <record id="product_category_raw_materials" model="product.category">
            <field name="name">Raw Materials</field>
            <field name="parent_id" ref="product_category_signs"/>
        </record>

        <record id="product_category_laminates" model="product.category">
            <field name="name">Laminates</field>
            <field name="parent_id" ref="product_category_raw_materials"/>
        </record>

        <record id="product_category_substrates" model="product.category">
            <field name="name">Substrates</field>
            <field name="parent_id" ref="product_category_raw_materials"/>
        </record>

        <record id="product_category_consumables" model="product.category">
            <field name="name">Consumables</field>
            <field name="parent_id" ref="product_category_raw_materials"/>
        </record>

        <record id="product_category_adhesives" model="product.category">
            <field name="name">Adhesives &amp; Coatings</field>
            <field name="parent_id" ref="product_category_raw_materials"/>
        </record>

        <!-- ================================================================= -->
        <!-- LAMINATES (Pionite HPL) -->
        <!-- ================================================================= -->

        <!-- Pionite Sheet 49"x97" - Cost: $211.30, Sell: $580 (2.76x) -->
        <record id="product_pionite_sheet" model="product.template">
            <field name="name">Pionite HPL Sheet (49"x97")</field>
            <field name="categ_id" ref="product_category_laminates"/>
            <field name="type">consu</field>
            <field name="standard_price">211.30</field>
            <field name="list_price">580.00</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>

            <field name="description_sale">High Pressure Laminate sheet, 49" x 97". Standard for panel sign face.</field>
            <field name="default_code">MAT-PIONITE</field>
        </record>

        <!-- ================================================================= -->
        <!-- SUBSTRATES (ABS / Acrylic sheets) -->
        <!-- ================================================================= -->

        <!-- ABS 1/8" Sheet 48x96 - Cost: $80, Sell: $220 -->
        <record id="product_abs_18" model="product.template">
            <field name="name">ABS Sheet 1/8" (48"x96")</field>
            <field name="categ_id" ref="product_category_substrates"/>
            <field name="type">consu</field>
            <field name="standard_price">80.00</field>
            <field name="list_price">220.00</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>

            <field name="description_sale">ABS plastic substrate, 1/8" thick, 48" x 96" sheet.</field>
            <field name="default_code">MAT-ABS-18</field>
        </record>

        <!-- ABS 3/16" Sheet 48x96 - Cost: $130, Sell: $360 -->
        <record id="product_abs_316" model="product.template">
            <field name="name">ABS Sheet 3/16" (48"x96")</field>
            <field name="categ_id" ref="product_category_substrates"/>
            <field name="type">consu</field>
            <field name="standard_price">130.00</field>
            <field name="list_price">360.00</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>

            <field name="description_sale">ABS plastic substrate, 3/16" thick, 48" x 96" sheet.</field>
            <field name="default_code">MAT-ABS-316</field>
        </record>

        <!-- Acrylic 1/8" Sheet - Cost: $110, Sell: $305 -->
        <record id="product_acrylic_18" model="product.template">
            <field name="name">Acrylic Sheet 1/8" (48"x96")</field>
            <field name="categ_id" ref="product_category_substrates"/>
            <field name="type">consu</field>
            <field name="standard_price">110.00</field>
            <field name="list_price">305.00</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>

            <field name="description_sale">Cast acrylic substrate, 1/8" thick, 48" x 96" sheet.</field>
            <field name="default_code">MAT-ACRY-18</field>
        </record>

        <!-- Window Sheet 24x48 - Cost: $75, Sell: $205 -->
        <record id="product_window_sheet" model="product.template">
            <field name="name">Window Acrylic Sheet (24"x48")</field>
            <field name="categ_id" ref="product_category_substrates"/>
            <field name="type">consu</field>
            <field name="standard_price">75.00</field>
            <field name="list_price">205.00</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>

            <field name="description_sale">Clear acrylic for windowed signs, 24" x 48" sheet.</field>
            <field name="default_code">MAT-WINDOW</field>
        </record>

        <!-- ================================================================= -->
        <!-- CONSUMABLES (Ink, Paint, Hotstamp, etc.) -->
        <!-- ================================================================= -->

        <!-- Ink - Cost: $0.33/sign, Sell: $1.00/sign -->
        <record id="product_ink_per_sign" model="product.template">
            <field name="name">UV Ink (per sign application)</field>
            <field name="categ_id" ref="product_category_consumables"/>
            <field name="type">consu</field>
            <field name="standard_price">0.33</field>
            <field name="list_price">1.00</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>

            <field name="description_sale">UV curable ink cost allocation per sign.</field>
            <field name="default_code">CONS-INK</field>
        </record>

        <!-- Paint - Cost: $0.60/sign, Sell: $1.65/sign -->
        <record id="product_paint_per_sign" model="product.template">
            <field name="name">Paint (per sign application)</field>
            <field name="categ_id" ref="product_category_consumables"/>
            <field name="type">consu</field>
            <field name="standard_price">0.60</field>
            <field name="list_price">1.65</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>

            <field name="description_sale">Paint cost allocation per sign.</field>
            <field name="default_code">CONS-PAINT</field>
        </record>

        <!-- Hotstamp Foil - Cost: $0.02/sign, Sell: $0.05/sign -->
        <record id="product_hotstamp" model="product.template">
            <field name="name">Hotstamp Foil (per sign)</field>
            <field name="categ_id" ref="product_category_consumables"/>
            <field name="type">consu</field>
            <field name="standard_price">0.02</field>
            <field name="list_price">0.05</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>

            <field name="description_sale">Hotstamp foil cost per sign.</field>
            <field name="default_code">CONS-STAMP</field>
        </record>

        <!-- Tape - Cost: $0.25/mold, Sell: $0.70/mold -->
        <record id="product_tape_per_mold" model="product.template">
            <field name="name">Masking Tape (per mold)</field>
            <field name="categ_id" ref="product_category_consumables"/>
            <field name="type">consu</field>
            <field name="standard_price">0.25</field>
            <field name="list_price">0.70</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>

            <field name="description_sale">Masking tape cost per mold.</field>
            <field name="default_code">CONS-TAPE</field>
        </record>

        <!-- ================================================================= -->
        <!-- ADHESIVES & COATINGS -->
        <!-- ================================================================= -->

        <!-- McLube - Cost: $0.50/mold, Sell: $1.40/mold -->
        <record id="product_mclube" model="product.template">
            <field name="name">McLube Release (per mold)</field>
            <field name="categ_id" ref="product_category_adhesives"/>
            <field name="type">consu</field>
            <field name="standard_price">0.50</field>
            <field name="list_price">1.40</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>

            <field name="description_sale">McLube mold release agent cost per mold.</field>
            <field name="default_code">CONS-MCLUBE</field>
        </record>

        <!-- ================================================================= -->
        <!-- LABOR -->
        <!-- ================================================================= -->

        <record id="product_category_labor" model="product.category">
            <field name="name">Labor</field>
            <field name="parent_id" ref="product_category_signs"/>
        </record>

        <!-- Shop Labor - $75/hr (Cost: ~$45/hr with burden) -->
        <record id="product_labor_shop" model="product.template">
            <field name="name">Shop Labor</field>
            <field name="categ_id" ref="product_category_labor"/>
            <field name="type">service</field>
            <field name="standard_price">45.00</field>
            <field name="list_price">75.00</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="uom_po_id" ref="uom.product_uom_hour"/>
            <field name="description_sale">Shop fabrication labor - $75.00/hour.</field>
            <field name="default_code">LABOR-SHOP</field>
        </record>

        <!-- Install Labor - $100/hr (Cost: ~$55/hr with burden) -->
        <record id="product_labor_install" model="product.template">
            <field name="name">Installation Labor</field>
            <field name="categ_id" ref="product_category_labor"/>
            <field name="type">service</field>
            <field name="standard_price">55.00</field>
            <field name="list_price">100.00</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="uom_po_id" ref="uom.product_uom_hour"/>
            <field name="description_sale">Field installation labor - $100.00/hour.</field>
            <field name="default_code">LABOR-INST</field>
        </record>

        <!-- Mold Labor - Based on pricing: Best $40/mold, Worst $100/mold -->
        <record id="product_labor_mold" model="product.template">
            <field name="name">Mold Setup Labor (per mold)</field>
            <field name="categ_id" ref="product_category_labor"/>
            <field name="type">service</field>
            <field name="standard_price">40.00</field>
            <field name="list_price">100.00</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>

            <field name="description_sale">Mold setup and processing labor per mold. Best case: $40, Worst case: $100.</field>
            <field name="default_code">LABOR-MOLD</field>
        </record>

        <!-- ================================================================= -->
        <!-- ADA PANEL SIGN PRODUCTS (Finished goods pricing) -->
        <!-- Using: Material + Labor (worst case) + 15% overhead * 2.4 markup -->
        <!-- Small ADA (6x8): ~$25 cost → ~$70 sell -->
        <!-- Medium ADA (8x10): ~$35 cost → ~$95 sell -->
        <!-- Large ADA (12x12): ~$50 cost → ~$140 sell -->
        <!-- ================================================================= -->

        <record id="product_category_ada" model="product.category">
            <field name="name">ADA Signs</field>
            <field name="parent_id" ref="product_category_signs"/>
        </record>

        <record id="product_ada_room_id_sm" model="product.template">
            <field name="name">ADA Room ID Sign - Small (6"x8")</field>
            <field name="categ_id" ref="product_category_ada"/>
            <field name="type">consu</field>
            <field name="standard_price">25.00</field>
            <field name="list_price">70.00</field>
            <field name="description_sale">ADA compliant room ID sign, 6"x8", raised text with Grade 2 Braille.</field>
            <field name="default_code">ADA-RID-SM</field>
        </record>

        <record id="product_ada_room_id_md" model="product.template">
            <field name="name">ADA Room ID Sign - Medium (8"x10")</field>
            <field name="categ_id" ref="product_category_ada"/>
            <field name="type">consu</field>
            <field name="standard_price">35.00</field>
            <field name="list_price">95.00</field>
            <field name="description_sale">ADA compliant room ID sign, 8"x10", raised text with Grade 2 Braille.</field>
            <field name="default_code">ADA-RID-MD</field>
        </record>

        <record id="product_ada_room_id_lg" model="product.template">
            <field name="name">ADA Room ID Sign - Large (12"x12")</field>
            <field name="categ_id" ref="product_category_ada"/>
            <field name="type">consu</field>
            <field name="standard_price">50.00</field>
            <field name="list_price">140.00</field>
            <field name="description_sale">ADA compliant room ID sign, 12"x12", raised text with Grade 2 Braille.</field>
            <field name="default_code">ADA-RID-LG</field>
        </record>

        <record id="product_ada_restroom" model="product.template">
            <field name="name">ADA Restroom Sign</field>
            <field name="categ_id" ref="product_category_ada"/>
            <field name="type">consu</field>
            <field name="standard_price">40.00</field>
            <field name="list_price">110.00</field>
            <field name="description_sale">ADA compliant restroom sign with pictogram, raised text, and Grade 2 Braille.</field>
            <field name="default_code">ADA-REST</field>
        </record>

        <record id="product_ada_exit" model="product.template">
            <field name="name">ADA Exit Sign</field>
            <field name="categ_id" ref="product_category_ada"/>
            <field name="type">consu</field>
            <field name="standard_price">20.00</field>
            <field name="list_price">55.00</field>
            <field name="description_sale">ADA compliant exit sign with raised text and Grade 2 Braille.</field>
            <field name="default_code">ADA-EXIT</field>
        </record>

        <record id="product_ada_stair" model="product.template">
            <field name="name">ADA Stair Sign</field>
            <field name="categ_id" ref="product_category_ada"/>
            <field name="type">consu</field>
            <field name="standard_price">35.00</field>
            <field name="list_price">95.00</field>
            <field name="description_sale">ADA compliant stair ID sign with raised floor number and Grade 2 Braille.</field>
            <field name="default_code">ADA-STAIR</field>
        </record>

        <!-- ================================================================= -->
        <!-- PRICING PARAMETERS (stored as config for reference) -->
        <!-- ================================================================= -->

        <record id="config_pricing_overhead" model="ir.config_parameter">
            <field name="key">patriot_base.pricing_overhead_pct</field>
            <field name="value">0.15</field>
        </record>

        <record id="config_pricing_markup" model="ir.config_parameter">
            <field name="key">patriot_base.pricing_markup_mult</field>
            <field name="value">2.40</field>
        </record>

        <record id="config_shop_rate" model="ir.config_parameter">
            <field name="key">patriot_base.shop_labor_rate</field>
            <field name="value">75.00</field>
        </record>

        <record id="config_install_rate" model="ir.config_parameter">
            <field name="key">patriot_base.install_labor_rate</field>
            <field name="value">100.00</field>
        </record>

    </data>
</odoo>
