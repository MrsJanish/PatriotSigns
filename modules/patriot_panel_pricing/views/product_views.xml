<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_panel" model="ir.ui.view">
        <field name="name">product.template.common.form.inherit.panel</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d_inline_block">
                    <field name="is_panel_sign"/>
                    <label for="is_panel_sign"/>
                </span>
            </xpath>
        </field>
    </record>
</odoo>
