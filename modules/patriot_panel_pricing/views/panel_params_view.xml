<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEW -->
    <record id="view_panel_pricing_params_form" model="ir.ui.view">
        <field name="name">panel.pricing.params.form</field>
        <field name="model">panel.pricing.params</field>
        <field name="arch" type="xml">
            <form string="Panel Pricing Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group string="Sheet Materials">
                            <field name="pionite_sheet_cost"/>
                            <field name="abs_18_sheet_cost"/>
                            <field name="abs_316_sheet_cost"/>
                            <field name="acrylic_18_sheet_cost"/>
                            <field name="window_sheet_cost"/>
                        </group>
                        <group string="Labor &amp; Markup">
                            <field name="labor_rate_worst" string="Labor Rate ($/hr)"/>
                            <field name="overhead_pct" widget="percentage"/>
                            <field name="markup_multiplier"/>
                        </group>
                    </group>
                    <group>
                        <group string="Consumables">
                            <field name="ink_per_sign"/>
                            <field name="paint_per_sign"/>
                            <field name="tape_per_mold"/>
                        </group>
                        <group string="Machine Specs">
                            <field name="press_w"/>
                            <field name="press_h"/>
                            <field name="molds_per_sheet"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE VIEW (Renamed to LIST for Odoo 19 compatibility) -->
    <record id="view_panel_pricing_params_tree" model="ir.ui.view">
        <field name="name">panel.pricing.params.list</field>
        <field name="model">panel.pricing.params</field>
        <field name="arch" type="xml">
            <list string="Panel Configurations">
                <field name="name"/>
                <field name="markup_multiplier"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_panel_pricing_config" model="ir.actions.act_window">
        <field name="name">Panel Pricing Settings</field>
        <field name="res_model">panel.pricing.params</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define your pricing constants here.
          </p>
        </field>
    </record>
</odoo>
