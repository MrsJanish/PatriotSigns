<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================ -->
    <!-- CRM Lead Form: Stage-driven view — mirrors estimate form     -->
    <!-- When in Estimating stage, hides CRM fields and renders an    -->
    <!-- identical copy of the ps.estimate form using related fields. -->
    <!-- ============================================================ -->
    <record id="crm_lead_view_form_inherit_estimating" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.estimating</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="priority">25</field>
        <field name="arch" type="xml">

            <!-- Hidden fields for view logic -->
            <xpath expr="//field[@name='won_status']" position="after">
                <field name="is_estimating_stage" invisible="1"/>
            </xpath>

            <!-- Estimates stat button -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_estimates"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-calculator"
                        invisible="estimate_count == 0">
                    <field name="estimate_count" widget="statinfo" string="Estimates"/>
                </button>
            </xpath>

            <!-- ======================================================== -->
            <!-- HIDE default CRM header buttons when in Estimating stage -->
            <!-- ======================================================== -->
            <xpath expr="//header/button[@name='action_sale_quotations_new']" position="attributes">
                <attribute name="invisible">is_estimating_stage or type != 'opportunity'</attribute>
            </xpath>

            <!-- ======================================================== -->
            <!-- ADD estimate header buttons (mirrors estimate form header)-->
            <!-- ======================================================== -->
            <xpath expr="//header" position="inside">
                <button name="action_estimate_populate"
                        string="Populate from Sign Types"
                        type="object"
                        class="btn-secondary"
                        invisible="not is_estimating_stage or estimate_state != 'draft'"/>
                <button name="action_estimate_approve"
                        string="Approve"
                        type="object"
                        class="btn-primary"
                        invisible="not is_estimating_stage or estimate_state != 'draft'"/>
                <button name="action_estimate_submit"
                        string="Submit"
                        type="object"
                        class="btn-success"
                        invisible="not is_estimating_stage or estimate_state != 'approved'"/>
                <field name="estimate_state" widget="statusbar"
                       invisible="not is_estimating_stage"/>
            </xpath>

            <!-- ======================================================== -->
            <!-- HIDE default CRM content when in Estimating stage        -->
            <!-- ======================================================== -->
            <xpath expr="//div[hasclass('oe_title')]" position="attributes">
                <attribute name="invisible">is_estimating_stage</attribute>
            </xpath>
            <xpath expr="//group/group[@name='opportunity_partner']/.." position="attributes">
                <attribute name="invisible">is_estimating_stage</attribute>
            </xpath>
            <xpath expr="//field[@name='lead_properties']/.." position="attributes">
                <attribute name="invisible">is_estimating_stage</attribute>
            </xpath>
            <xpath expr="//notebook" position="attributes">
                <attribute name="invisible">is_estimating_stage</attribute>
            </xpath>

            <!-- ======================================================== -->
            <!-- ESTIMATE FORM — identical to ps.estimate form view       -->
            <!-- Mirrors estimate_views.xml lines 44-191 exactly          -->
            <!-- ======================================================== -->
            <xpath expr="//notebook" position="before">
                <div invisible="not is_estimating_stage">

                    <!-- Title — identical to estimate form -->
                    <div class="oe_title">
                        <label for="estimate_name" string="Estimate Number"/>
                        <h1>
                            <field name="estimate_name" readonly="1"/>
                        </h1>
                        <h3>
                            <field name="name" readonly="1"/>
                        </h3>
                    </div>

                    <!-- Project / Dates — identical to estimate form -->
                    <group>
                        <group string="Project">
                            <field name="current_estimate_id" string="Opportunity" invisible="1"/>
                            <field name="partner_id" readonly="1" string="Opportunity"/>
                            <field name="gc_partner_id" string="General Contractor"/>
                        </group>
                        <group string="Dates">
                            <field name="estimate_date"/>
                            <field name="estimate_valid_until"/>
                        </group>
                    </group>

                    <!-- Notebook — identical tabs to estimate form -->
                    <notebook>
                        <!-- Estimate Lines — same columns, same order -->
                        <page string="Estimate Lines" name="est_lines">
                            <field name="estimate_line_ids" mode="list">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="sign_type_id"/>
                                    <field name="description"/>
                                    <field name="category_id" optional="show"/>
                                    <field name="dimensions_display" optional="show"/>
                                    <field name="sign_width" optional="hide"/>
                                    <field name="sign_height" optional="hide"/>
                                    <field name="quantity"/>
                                    <field name="material_unit_cost"/>
                                    <field name="material_extended" sum="Material"/>
                                    <field name="labor_hours" optional="show"/>
                                    <field name="labor_rate" optional="hide"/>
                                    <field name="labor_extended" sum="Labor"/>
                                    <field name="breakeven_price" string="Break-Even/Unit" optional="show"/>
                                    <field name="unit_price" string="Sell/Unit"/>
                                    <field name="breakeven_extended" string="Break-Even Total" sum="Break-Even"/>
                                    <field name="line_total" sum="Sell Total"/>
                                    <field name="profit_amount" string="Profit $" sum="Profit"/>
                                </list>
                                <form>
                                    <sheet>
                                        <!-- Intermediate computed fields for auto-refresh -->
                                        <field name="estimate_id" invisible="1"/>
                                        <field name="signs_per_mold" invisible="1"/>
                                        <field name="molds_needed" invisible="1"/>
                                        <field name="signs_produced" invisible="1"/>
                                        <field name="stock_generated" invisible="1"/>
                                        <field name="sheets_needed" invisible="1"/>
                                        <field name="waste_percent" invisible="1"/>
                                        <field name="labor_unit_cost" invisible="1"/>
                                        <field name="overhead_unit_cost" invisible="1"/>
                                        <field name="calculate_dynamic" invisible="1"/>
                                        <group>
                                            <group string="Sign Type">
                                                <field name="sign_type_id"
                                                       domain="[('opportunity_id', '=', parent.id)]"/>
                                                <field name="description"/>
                                                <field name="category_id"/>
                                            </group>
                                            <group string="Dimensions">
                                                <field name="sign_width"/>
                                                <field name="sign_height"/>
                                                <field name="dimensions_display" readonly="1"/>
                                            </group>
                                        </group>
                                        <group>
                                            <group string="Quantity &amp; Pricing">
                                                <field name="quantity"/>
                                                <field name="unit_price"/>
                                                <field name="material_unit_cost"/>
                                                <field name="total_unit_cost" readonly="1"/>
                                                <field name="breakeven_price" readonly="1"/>
                                            </group>
                                            <group string="Costs">
                                                <field name="material_extended" readonly="1"/>
                                                <field name="labor_hours" readonly="1"/>
                                                <field name="labor_extended" readonly="1"/>
                                                <field name="profit_margin" readonly="1"/>
                                                <field name="line_total" readonly="1"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <!-- Labor & Travel — identical -->
                        <page string="Labor &amp; Travel" name="est_labor_travel">
                            <group>
                                <group string="Shop Labor (Mold-Based)">
                                    <field name="est_total_molds" readonly="1"/>
                                    <field name="est_mold_time_minutes"/>
                                    <field name="est_shop_rate"/>
                                    <field name="est_shop_labor_total" widget="monetary" readonly="1"/>
                                </group>
                                <group string="Travel">
                                    <field name="est_travel_miles"/>
                                    <field name="est_travel_rate"/>
                                    <field name="est_travel_trips"/>
                                    <field name="est_travel_total" widget="monetary" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <!-- Installation — identical -->
                        <page string="Installation" name="est_installation">
                            <group>
                                <group string="Install Crew">
                                    <field name="est_install_crew_id" options="{'no_create': False}"/>
                                    <field name="est_install_crew_size" readonly="1"/>
                                    <field name="est_install_rate"/>
                                </group>
                                <group string="Install Labor">
                                    <field name="est_install_hours"/>
                                    <field name="est_install_total" widget="monetary" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Equipment Rental">
                                    <field name="est_needs_equipment"/>
                                    <field name="est_equipment_type" invisible="not est_needs_equipment"/>
                                    <field name="est_equipment_days" invisible="not est_needs_equipment"/>
                                    <field name="est_equipment_daily_rate" invisible="not est_needs_equipment"/>
                                    <field name="est_equipment_delivery" invisible="not est_needs_equipment"/>
                                    <field name="est_equipment_total" widget="monetary" readonly="1" invisible="not est_needs_equipment"/>
                                </group>
                            </group>
                        </page>

                        <!-- Summary — identical -->
                        <page string="Summary" name="est_summary">
                            <group class="oe_subtotal_footer oe_right">
                                <field name="est_signage_total" widget="monetary" readonly="1" string="Signage Total"/>
                                <field name="est_travel_total" widget="monetary" readonly="1" string="Travel"/>
                                <field name="est_install_total" widget="monetary" readonly="1" string="Installation"/>
                                <field name="est_equipment_total" widget="monetary" readonly="1"
                                       invisible="not est_needs_equipment" string="Equipment"/>
                                <field name="estimate_total" widget="monetary" readonly="1"
                                       class="oe_subtotal_footer_separator" string="Estimate Total"/>
                            </group>
                            <div class="oe_clear"/>
                            <button name="action_estimate_generate_quotation"
                                    type="object"
                                    string="⚡ Generate Quotation"
                                    class="btn-primary"
                                    invisible="estimate_state not in ('approved', 'submitted')"
                                    confirm="Create a quotation from this estimate? Each line becomes a quotation line item with the bid prices."/>
                        </page>

                        <!-- Terms — identical -->
                        <page string="Terms" name="est_terms">
                            <group>
                                <field name="est_terms"/>
                                <field name="est_exclusions"/>
                            </group>
                        </page>

                        <!-- Notes — identical -->
                        <page string="Notes" name="est_notes">
                            <field name="est_notes"/>
                        </page>
                    </notebook>

                </div>
            </xpath>

        </field>
    </record>

</odoo>
