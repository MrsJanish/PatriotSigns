<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================ -->
    <!-- CRM Kanban: Redirect to estimate when one exists              -->
    <!-- Clicking a lead card with estimates opens the estimate form   -->
    <!-- directly instead of the lead form.                            -->
    <!-- ============================================================ -->
    <record id="crm_lead_kanban_inherit_estimating" model="ir.ui.view">
        <field name="name">crm.lead.kanban.inherit.estimating</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_lead_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="attributes">
                <attribute name="action">action_open_lead_or_estimate</attribute>
                <attribute name="type">object</attribute>
            </xpath>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- CRM Lead Form: Estimates stat button + inline content         -->
    <!-- ============================================================ -->
    <record id="crm_lead_view_form_inherit_estimating" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.estimating</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="priority">25</field>
        <field name="arch" type="xml">

            <!-- Stat button for estimate navigation -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_estimates"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-calculator"
                        invisible="estimate_count == 0">
                    <field name="estimate_count" widget="statinfo" string="Estimates"/>
                </button>
            </xpath>

            <!-- Estimate tab with inline content -->
            <xpath expr="//notebook" position="inside">
                <page string="ðŸ“Š Estimate"
                      name="estimates_tab"
                      invisible="estimate_count == 0">

                    <!-- Estimate header info -->
                    <group>
                        <group string="Estimate">
                            <field name="current_estimate_id" readonly="1"/>
                            <field name="estimate_state" widget="badge"
                                   decoration-info="estimate_state == 'draft'"
                                   decoration-warning="estimate_state in ('approved','submitted')"
                                   decoration-success="estimate_state == 'won'"
                                   decoration-danger="estimate_state == 'lost'"/>
                        </group>
                        <group string="Totals">
                            <field name="estimate_total" widget="monetary"/>
                            <field name="estimate_profit_margin_pct" string="Profit Margin %"/>
                        </group>
                    </group>

                    <!-- Estimate lines â€” same layout as the Estimate form -->
                    <field name="estimate_line_ids" mode="list" readonly="1">
                        <list>
                            <field name="sign_type_id"/>
                            <field name="description"/>
                            <field name="category_id" optional="show"/>
                            <field name="dimensions_display" optional="show"/>
                            <field name="quantity"/>
                            <field name="material_unit_cost"/>
                            <field name="material_extended" sum="Material"/>
                            <field name="labor_unit_cost"/>
                            <field name="labor_extended" sum="Labor"/>
                            <field name="breakeven_price" string="Break-Even/Unit"/>
                            <field name="unit_price" string="Sell/Unit"/>
                            <field name="breakeven_extended" string="Break-Even Total" sum="Break-Even"/>
                            <field name="line_total" sum="Sell Total"/>
                            <field name="profit_amount" string="Profit $" sum="Profit"/>
                            <field name="profit_margin" string="Margin %" optional="show"/>
                        </list>
                    </field>

                    <!-- Open full estimate for editing -->
                    <div class="mt-3">
                        <button name="action_view_estimates"
                                type="object"
                                string="Open Full Estimate â†’"
                                class="btn btn-link"
                                icon="fa-external-link"/>
                    </div>
                </page>
            </xpath>

        </field>
    </record>

</odoo>
