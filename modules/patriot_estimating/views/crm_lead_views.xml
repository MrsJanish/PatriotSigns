<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================ -->
    <!-- CRM Lead Form: Estimates stat button + inline preview         -->
    <!-- ============================================================ -->
    <record id="crm_lead_view_form_inherit_estimating" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.estimating</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="priority">25</field>
        <field name="arch" type="xml">

            <!-- Stat button for estimate navigation -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_estimates"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-calculator"
                        invisible="estimate_count == 0">
                    <field name="estimate_count" widget="statinfo" string="Estimates"/>
                </button>
            </xpath>

        </field>
    </record>

</odoo>
