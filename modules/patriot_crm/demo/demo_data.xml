<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
        DEMO DATA - Full Pipeline Test
        ==============================
        
        This creates a complete test dataset that flows through:
        1. CRM Lead (ConstructConnect opportunity)
        2. Sign Types (with sign schedule)
        3. Sign Instances (individual signs)
        4. Estimate
        5. Submittal
        6. Production Order
        7. Installation
        8. Pay Application
        
        Use this to verify the entire system works end-to-end.
        -->
        
        <!-- ================================================================= -->
        <!-- TEST PARTNERS                                                     -->
        <!-- ================================================================= -->
        
        <record id="partner_gc_demo" model="res.partner">
            <field name="name">Turner Construction - Demo</field>
            <field name="is_company">True</field>
            <field name="is_gc">True</field>
            <field name="email">demo.pm@turner.com</field>
            <field name="phone">405-555-0100</field>
        </record>
        
        <record id="partner_owner_demo" model="res.partner">
            <field name="name">OU Medical Center - Demo</field>
            <field name="is_company">True</field>
            <field name="is_owner">True</field>
        </record>
        
        <record id="partner_architect_demo" model="res.partner">
            <field name="name">Frankfurt Short Bruza - Demo</field>
            <field name="is_company">True</field>
            <field name="is_architect">True</field>
        </record>
        
        <!-- ================================================================= -->
        <!-- TEST CRM LEAD (ConstructConnect Opportunity)                      -->
        <!-- ================================================================= -->
        
        <record id="lead_demo_hospital" model="crm.lead">
            <field name="name">OU Medical Center - Tower Addition</field>
            <field name="type">opportunity</field>
            
            <!-- ConstructConnect Fields -->
            <field name="cc_project_id">CC-2024-DEMO-001</field>
            <field name="cc_access_code">DEMO123</field>
            
            <!-- Bid Information -->
            <field name="bid_date" eval="(DateTime.today() + timedelta(days=30)).strftime('%Y-%m-%d')"/>
            <field name="bid_time">2:00 PM CST</field>
            <field name="bid_type">open</field>
            
            <!-- Project Parties -->
            <field name="gc_partner_id" ref="partner_gc_demo"/>
            <field name="owner_partner_id" ref="partner_owner_demo"/>
            <field name="architect_partner_id" ref="partner_architect_demo"/>
            
            <!-- Project Details -->
            <field name="project_alias">OUMC Tower</field>
            <field name="project_address">700 NE 13th Street</field>
            <field name="project_city">Oklahoma City</field>
            <field name="project_zip">73104</field>
            <field name="project_type">healthcare</field>
            <field name="project_scope">Interior wayfinding, ADA room signage, directory, and exterior monument.</field>
            
            <!-- Expected Value -->
            <field name="expected_revenue">85000</field>
        </record>

    </data>
</odoo>
