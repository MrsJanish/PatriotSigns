<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- LIST VIEW -->
    <record id="cc_opportunity_view_list" model="ir.ui.view">
        <field name="name">cc.opportunity.list</field>
        <field name="model">cc.opportunity</field>
        <field name="arch" type="xml">
            <list string="CC Opportunities" decoration-warning="state == 'new'" decoration-success="state == 'ready'">
                <field name="name"/>
                <field name="project_number"/>
                <field name="bid_date"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="estimated_value" widget="monetary"/>
                <field name="document_count"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="cc_opportunity_view_form" model="ir.ui.view">
        <field name="name">cc.opportunity.form</field>
        <field name="model">cc.opportunity</field>
        <field name="arch" type="xml">
            <form string="CC Opportunity">
                <header>
                    <button name="action_fetch_cc_data" type="object" string="ðŸ”„ Fetch/Refresh Data" class="btn-primary" invisible="not cc_source_url"/>
                    <button name="action_view_documents" type="object" string="ðŸ“„ View Documents" class="btn-secondary" invisible="document_count == 0"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,ready,bidding,won,lost"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Project Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Project Info">
                            <field name="project_number"/>
                            <field name="bid_date"/>
                            <field name="bid_time"/>
                            <field name="project_type"/>
                            <field name="project_stage"/>
                            <field name="estimated_value" widget="monetary"/>
                        </group>
                        <group string="Location">
                            <field name="street"/>
                            <field name="city"/>
                            <field name="state_id"/>
                            <field name="zip_code"/>
                            <field name="county"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Contacts">
                            <field name="owner_name"/>
                            <field name="architect_name"/>
                            <field name="gc_name"/>
                        </group>
                        <group string="Source">
                            <field name="cc_project_id"/>
                            <field name="cc_source_url" widget="url"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Documents" name="documents">
                            <field name="document_ids" widget="many2many_binary">
                                <list>
                                    <field name="name"/>
                                    <field name="mimetype"/>
                                    <field name="create_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- KANBAN VIEW -->
    <record id="cc_opportunity_view_kanban" model="ir.ui.view">
        <field name="name">cc.opportunity.kanban</field>
        <field name="model">cc.opportunity</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="bid_date"/>
                <field name="city"/>
                <field name="state"/>
                <field name="document_count"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_details">
                            <strong class="o_kanban_record_title">
                                <field name="name"/>
                            </strong>
                            <div class="o_kanban_record_subtitle">
                                <field name="city"/>, <field name="state_id"/>
                            </div>
                            <div class="text-muted">
                                Bid: <field name="bid_date"/>
                            </div>
                            <div>
                                <span class="badge bg-info">
                                    <field name="document_count"/> Docs
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="cc_opportunity_view_search" model="ir.ui.view">
        <field name="name">cc.opportunity.search</field>
        <field name="model">cc.opportunity</field>
        <field name="arch" type="xml">
            <search string="Search Opportunities">
                <field name="name" string="Project Name"/>
                <field name="city"/>
                <field name="state_id" string="State"/>
                <field name="project_number"/>
                <field name="gc_name" string="General Contractor"/>
                <field name="owner_name" string="Owner"/>
                <field name="architect_name" string="Contact/Architect"/>
                <separator/>
                <filter string="New" name="filter_new" domain="[('state', '=', 'new')]"/>
                <filter string="Ready" name="filter_ready" domain="[('state', '=', 'ready')]"/>
                <filter string="Bidding" name="filter_bidding" domain="[('state', '=', 'bidding')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="City" name="group_city" context="{'group_by': 'city'}"/>
                    <filter string="State" name="group_state_id" context="{'group_by': 'state_id'}"/>
                    <filter string="Bid Date" name="group_bid_date" context="{'group_by': 'bid_date'}"/>
                    <filter string="General Contractor" name="group_gc" context="{'group_by': 'gc_name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="cc_opportunity_action" model="ir.actions.act_window">
        <field name="name">Opportunities</field>
        <field name="res_model">cc.opportunity</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="cc_opportunity_view_search"/>
        <field name="context">{'search_default_filter_new': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No opportunities yet!
            </p>
            <p>
                Forward ITB emails from ConstructConnect to start tracking projects.
            </p>
        </field>
    </record>
</odoo>
