<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="patriot_cc_ops.SignTally" owl="1">
        <div class="sign-tally-container">
            <!-- Aurora Background handled by CSS -->
            
            <div class="tally-wrapper">
                <!-- Header -->
                <div class="tally-header">
                    <div class="header-left">
                        <h1>Sign<span>Tally</span></h1>
                        <div class="header-project" t-if="state.opportunity">
                            <t t-esc="state.opportunity.name"/>
                        </div>
                    </div>
                    <div class="header-actions">
                        <button class="header-btn" t-on-click="goBack">
                            <i class="fa fa-arrow-left"/>
                            Back
                        </button>
                        <button class="header-btn" t-on-click="openDocuments" t-if="state.attachments.length">
                            <i class="fa fa-external-link"/>
                            Open PDFs
                        </button>
                        <button class="header-btn" t-on-click="exportToExcel" t-if="state.signTypes.length">
                            <i class="fa fa-file-excel-o"/>
                            Export
                        </button>
                        <button class="header-btn primary" t-on-click="openAddModal">
                            <i class="fa fa-plus"/>
                            Add Sign Type
                        </button>
                    </div>
                </div>

                <!-- Stats Bar -->
                <div class="stats-bar">
                    <div class="stat-card">
                        <i class="fa fa-sign"/>
                        <div>
                            <div class="stat-value"><t t-esc="state.signTypes.length"/></div>
                            <div class="stat-label">Sign Types</div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <i class="fa fa-hashtag"/>
                        <div>
                            <div class="stat-value"><t t-esc="totalSigns"/></div>
                            <div class="stat-label">Total Signs</div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <i class="fa fa-file-pdf-o"/>
                        <div>
                            <div class="stat-value"><t t-esc="state.attachments.length"/></div>
                            <div class="stat-label">Documents</div>
                        </div>
                    </div>
                </div>

                <!-- Loading State -->
                <div t-if="state.isLoading" class="tally-loading">
                    <i class="fa fa-spinner fa-spin"/>
                </div>

                <!-- Sign Cards Grid -->
                <div t-else="" class="sign-cards">
                    <t t-foreach="state.signTypes" t-as="signType" t-key="signType.id">
                        <div class="sign-card" t-on-click="() => this.openEditModal(signType)">
                            <div class="sign-card-header">
                                <div>
                                    <div class="sign-name"><t t-esc="signType.name"/></div>
                                    <div class="sign-dims" t-if="signType.dimensions">
                                        <t t-esc="signType.dimensions"/>
                                    </div>
                                </div>
                                <div class="qty-controls" t-on-click.stop="">
                                    <button class="btn-qty minus" t-on-click="() => this.decrementQuantity(signType)">−</button>
                                    <span class="qty-value"><t t-esc="signType.quantity || 0"/></span>
                                    <button class="btn-qty plus" t-on-click="() => this.incrementQuantity(signType)">+</button>
                                </div>
                            </div>
                        </div>
                    </t>

                    <!-- Add Card -->
                    <div class="btn-add-card" t-on-click="openAddModal">
                        <i class="fa fa-plus"/>
                        <span>Add Sign Type</span>
                    </div>
                </div>

                <!-- Empty State -->
                <div t-if="!state.isLoading and state.signTypes.length === 0" class="empty-state">
                    <i class="fa fa-clipboard"/>
                    <p>No sign types yet</p>
                    <p>Click "Add Sign Type" to get started</p>
                </div>
            </div>

            <!-- Quick Add Modal -->
            <div t-if="state.showAddModal" class="modal-overlay" t-on-click="closeAddModal">
                <div class="modal-content" t-on-click.stop="">
                    <div class="modal-header">
                        <h4>Add Sign Type</h4>
                        <button class="close-btn" t-on-click="closeAddModal">×</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Sign ID *</label>
                            <input type="text" class="form-input" 
                                   placeholder="e.g. SN-1"
                                   t-att-value="state.newSignType.name"
                                   t-on-input="onNewNameInput"/>
                        </div>
                        <div class="form-group">
                            <label>Dimensions</label>
                            <input type="text" class="form-input" 
                                   placeholder='e.g. 12" x 18"'
                                   t-att-value="state.newSignType.dimensions"
                                   t-on-input="onNewDimensionsInput"/>
                        </div>
                        <div class="form-group">
                            <label>Notes</label>
                            <input type="text" class="form-input" 
                                   placeholder="Optional notes"
                                   t-att-value="state.newSignType.notes"
                                   t-on-input="onNewNotesInput"/>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn-modal btn-cancel" t-on-click="closeAddModal">Cancel</button>
                        <button class="btn-modal btn-save" t-on-click="saveNewSignType">Add Sign Type</button>
                    </div>
                </div>
            </div>

            <!-- Edit Modal -->
            <div t-if="state.showEditModal" class="modal-overlay" t-on-click="closeEditModal">
                <div class="modal-content" t-on-click.stop="">
                    <div class="modal-header">
                        <h4>Edit Sign Type</h4>
                        <button class="close-btn" t-on-click="closeEditModal">×</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Sign ID *</label>
                            <input type="text" class="form-input" 
                                   t-att-value="state.editingSignType?.name"
                                   t-on-input="onEditNameInput"/>
                        </div>
                        <div class="form-group">
                            <label>Dimensions</label>
                            <input type="text" class="form-input" 
                                   t-att-value="state.editingSignType?.dimensions"
                                   t-on-input="onEditDimensionsInput"/>
                        </div>
                        <div class="form-group">
                            <label>Material</label>
                            <input type="text" class="form-input" 
                                   t-att-value="state.editingSignType?.material"
                                   t-on-input="onEditMaterialInput"/>
                        </div>
                        <div class="form-group">
                            <label>Mounting</label>
                            <input type="text" class="form-input" 
                                   t-att-value="state.editingSignType?.mounting"
                                   t-on-input="onEditMountingInput"/>
                        </div>
                        <div class="form-group">
                            <label>Notes</label>
                            <input type="text" class="form-input" 
                                   t-att-value="state.editingSignType?.notes"
                                   t-on-input="onEditNotesInput"/>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn-modal btn-delete" t-on-click="deleteSignType">
                            <i class="fa fa-trash"/> Delete
                        </button>
                        <button class="btn-modal btn-cancel" t-on-click="closeEditModal">Cancel</button>
                        <button class="btn-modal btn-save" t-on-click="saveEditSignType">Save Changes</button>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
