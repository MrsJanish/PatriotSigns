<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="patriot_cc_ops.Dashboard">
        <div class="o_cc_dashboard p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2 mb-0">
                    <span class="fw-bold">Construct</span>Connect Dashboard
                </h1>
            </div>
            
            <t t-if="state.loading">
                <div class="text-center p-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading projects...</p>
                </div>
            </t>
            
            <t t-if="!state.loading and state.projects.length === 0">
                <div class="text-center p-5">
                    <h3>No Projects Found</h3>
                    <p class="text-muted">Forward ITB emails from ConstructConnect to start tracking projects.</p>
                </div>
            </t>
            
            <t t-if="!state.loading and state.projects.length > 0">
                <div class="row g-3">
                    <t t-foreach="state.projects" t-as="project" t-key="project.id">
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm" style="cursor: pointer;" 
                                 t-on-click="() => this.openProject(project.id)">
                                <div class="card-body">
                                    <h5 class="card-title text-truncate" t-esc="project.name"/>
                                    <p class="card-text text-muted mb-2">
                                        <i class="fa fa-map-marker me-1"/>
                                        <t t-esc="project.city || 'No location'"/>
                                        <t t-if="project.state_id">, <t t-esc="project.state_id"/></t>
                                    </p>
                                    <p class="card-text mb-2">
                                        <i class="fa fa-calendar me-1"/>
                                        <t t-esc="project.bid_date || 'No date'"/>
                                    </p>
                                    <span class="badge" 
                                          t-att-class="project.state === 'ready' ? 'bg-success' : project.state === 'new' ? 'bg-warning' : 'bg-secondary'">
                                        <t t-esc="project.state || 'new'"/>
                                    </span>
                                    <span class="badge bg-info ms-1">
                                        <t t-esc="project.document_count || 0"/> docs
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </div>
    </t>

</templates>
