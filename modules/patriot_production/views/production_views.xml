<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Production Order Tree View -->
    <record id="ps_production_order_tree" model="ir.ui.view">
        <field name="name">ps.production.order.tree</field>
        <field name="model">ps.production.order</field>
        <field name="arch" type="xml">
            <list decoration-info="state in ['design', 'fabrication', 'assembly']"
                  decoration-success="state == 'complete'"
                  decoration-warning="state == 'qc'">
                <field name="name"/>
                <field name="project_id"/>
                <field name="planned_date"/>
                <field name="due_date"/>
                <field name="instance_count"/>
                <field name="workcenter_id" optional="show"/>
                <field name="priority" widget="priority"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Production Order Form View -->
    <record id="ps_production_order_form" model="ir.ui.view">
        <field name="name">ps.production.order.form</field>
        <field name="model">ps.production.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_schedule" string="Schedule" type="object"
                            class="btn-secondary" invisible="state != 'draft'"/>
                    <button name="action_start_design" string="Start Design" type="object"
                            class="btn-primary" invisible="state != 'scheduled'"/>
                    <button name="action_start_fabrication" string="Start Fabrication" type="object"
                            class="btn-primary" invisible="state != 'design'"/>
                    <button name="action_start_assembly" string="Start Assembly" type="object"
                            class="btn-primary" invisible="state != 'fabrication'"/>
                    <button name="action_start_qc" string="Start QC" type="object"
                            class="btn-primary" invisible="state != 'assembly'"/>
                    <button name="action_complete" string="Complete" type="object"
                            class="btn-success" invisible="state != 'qc'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,scheduled,design,fabrication,assembly,qc,complete"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_manufacturing_orders" type="object"
                                class="oe_stat_button" icon="fa-industry"
                                invisible="mrp_count == 0">
                            <div class="o_stat_info">
                                <field name="mrp_count" class="o_stat_value"/>
                                <span class="o_stat_text">MOs</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Project">
                            <field name="project_id"/>
                            <field name="workcenter_id"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group string="Schedule">
                            <field name="planned_date"/>
                            <field name="due_date"/>
                            <field name="actual_start_date"/>
                            <field name="actual_end_date"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Sign Instances">
                            <field name="instance_ids" mode="list">
                                <list>
                                    <field name="sign_type_id"/>
                                    <field name="room_number_plans"/>
                                    <field name="copy_line_1"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Production Order Kanban -->
    <record id="ps_production_order_kanban" model="ir.ui.view">
        <field name="name">ps.production.order.kanban</field>
        <field name="model">ps.production.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="project_id"/>
                <field name="instance_count"/>
                <field name="due_date"/>
                <field name="priority"/>
                <templates>
                    <t t-name="card">
                        <div class="d-flex justify-content-between">
                            <strong><field name="name"/></strong>
                            <field name="priority" widget="priority"/>
                        </div>
                        <div><field name="project_id"/></div>
                        <div class="text-muted">
                            <span><field name="instance_count"/> signs</span>
                            <span class="float-end">Due: <field name="due_date"/></span>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Production Order Action -->
    <record id="ps_production_order_action" model="ir.actions.act_window">
        <field name="name">Production Orders</field>
        <field name="res_model">ps.production.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_in_progress': 1}</field>
    </record>

    <!-- Quality Check Tree -->
    <record id="ps_quality_check_tree" model="ir.ui.view">
        <field name="name">ps.quality.check.tree</field>
        <field name="model">ps.quality.check</field>
        <field name="arch" type="xml">
            <list decoration-success="result == 'pass'"
                  decoration-danger="result == 'fail'"
                  decoration-warning="result == 'rework'">
                <field name="production_order_id"/>
                <field name="instance_id"/>
                <field name="check_type"/>
                <field name="check_date"/>
                <field name="checked_by"/>
                <field name="result" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Quality Check Action -->
    <record id="ps_quality_check_action" model="ir.actions.act_window">
        <field name="name">Quality Checks</field>
        <field name="res_model">ps.quality.check</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
