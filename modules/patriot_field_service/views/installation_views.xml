<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Installation Tree View -->
    <record id="ps_installation_tree" model="ir.ui.view">
        <field name="name">ps.installation.tree</field>
        <field name="model">ps.installation</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'complete'"
                  decoration-info="state == 'in_progress'"
                  decoration-warning="state == 'partial'">
                <field name="name"/>
                <field name="project_id"/>
                <field name="scheduled_date"/>
                <field name="crew_id"/>
                <field name="instance_count"/>
                <field name="installed_count"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Installation Form View -->
    <record id="ps_installation_form" model="ir.ui.view">
        <field name="name">ps.installation.form</field>
        <field name="model">ps.installation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object"
                            class="btn-secondary" invisible="state != 'scheduled'"/>
                    <button name="action_start" string="Start" type="object"
                            class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_complete" string="Complete" type="object"
                            class="btn-success" invisible="state != 'in_progress'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="scheduled,confirmed,in_progress,complete"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Project">
                            <field name="project_id"/>
                            <field name="location_address"/>
                            <field name="location_city"/>
                        </group>
                        <group string="Schedule">
                            <field name="scheduled_date"/>
                            <field name="scheduled_time"/>
                            <field name="duration_estimate"/>
                            <field name="actual_duration" invisible="not actual_start"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Crew">
                            <field name="crew_id"/>
                            <field name="lead_installer_id"/>
                            <field name="installer_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Site Contact">
                            <field name="site_contact"/>
                            <field name="site_contact_phone"/>
                            <field name="gc_onsite_contact"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Signs to Install">
                            <field name="instance_ids" mode="list">
                                <list>
                                    <field name="sign_type_id"/>
                                    <field name="room_number_plans"/>
                                    <field name="copy_line_1"/>
                                    <field name="installed"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Requirements">
                            <group>
                                <group>
                                    <field name="requires_lift"/>
                                    <field name="lift_type" invisible="not requires_lift"/>
                                    <field name="requires_scaffold"/>
                                </group>
                                <group>
                                    <field name="special_equipment"/>
                                </group>
                            </group>
                            <group>
                                <field name="access_notes"/>
                            </group>
                        </page>
                        
                        <page string="Punchlist" name="punchlist">
                            <field name="punchlist_ids" mode="list">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="instance_id"/>
                                    <field name="issue_type"/>
                                    <field name="description"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Photos">
                            <field name="photo_ids" widget="many2many_binary"/>
                        </page>
                        
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Installation Calendar View -->
    <record id="ps_installation_calendar" model="ir.ui.view">
        <field name="name">ps.installation.calendar</field>
        <field name="model">ps.installation</field>
        <field name="arch" type="xml">
            <calendar string="Installations" date_start="scheduled_date" color="crew_id" mode="month">
                <field name="name"/>
                <field name="project_id"/>
                <field name="crew_id"/>
                <field name="instance_count"/>
            </calendar>
        </field>
    </record>

    <!-- Installation Action -->
    <record id="ps_installation_action" model="ir.actions.act_window">
        <field name="name">Installations</field>
        <field name="res_model">ps.installation</field>
        <field name="view_mode">list,calendar,form</field>
        <field name="context">{'search_default_upcoming': 1}</field>
    </record>

</odoo>
