<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- 
            OVERRIDE the core Odoo rule that restricts project.task.type visibility.
            Using the SAME id to replace the original rule's domain_force.
            Original rule: "Project/Task Type: see own or unowned stages"
        -->
        
        <!-- Override by using the exact same id as the core rule -->
        <record id="project.task_type_visibility_rule" model="ir.rule">
            <field name="name">Project/Task Type: All users can see all stages</field>
            <field name="model_id" ref="project.model_project_task_type"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
    </data>
</odoo>
