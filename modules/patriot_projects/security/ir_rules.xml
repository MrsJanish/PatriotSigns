<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- 
            Override restrictive record rule for project.task.type
            The core Odoo rule "see own or unowned stages" blocks project creation
        -->
        
        <!-- Allow all internal users to see all task stages -->
        <record id="rule_task_type_all_users" model="ir.rule">
            <field name="name">Task Stage: All Users Can Read</field>
            <field name="model_id" ref="project.model_project_task_type"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
    </data>
</odoo>
