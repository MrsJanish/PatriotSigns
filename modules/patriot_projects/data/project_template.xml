<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- MASTER PROJECT TEMPLATE -->
        <!-- Future Projects will clone from this structure -->
        <record id="project_project_signage_template" model="project.project">
            <field name="name">Standard Signage Project Template</field>
            <field name="active">False</field> <!-- Hidden template -->
            <field name="label_tasks">Work Orders</field>
            <field name="allow_timesheets">True</field> <!-- ENABLE TIMEKEEPING -->
            <field name="allow_billable">True</field>
            <field name="type_ids" eval="[(6,0, [
                ref('project_stage_contract'),
                ref('project_stage_submittals'),
                ref('project_stage_approved'),
                ref('project_stage_ordering'),
                ref('project_stage_production'),
                ref('project_stage_shipping'),
                ref('project_stage_installation'),
                ref('project_stage_punchlist'),
                ref('project_stage_billing'),
                ref('project_stage_complete')
            ])]"/>
        </record>

        <!-- DEFAULT TASKS IN TEMPLATE -->
        <!-- These act as placeholders if services aren't used -->
        
        <record id="project_task_pm_template" model="project.task">
            <field name="name">Project Management</field>
            <field name="project_id" ref="project_project_signage_template"/>
            <field name="description">Manage communications, contracts, and billing.</field>
            <field name="planned_hours">10.0</field>
        </record>

        <record id="project_task_design_template" model="project.task">
            <field name="name">Design &amp; Submittals</field>
            <field name="project_id" ref="project_project_signage_template"/>
            <field name="description">Create and revise shop drawings.</field>
            <field name="planned_hours">5.0</field>
        </record>

    </data>
</odoo>
