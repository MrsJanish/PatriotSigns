<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- 
            SERVICE PRODUCTS (Timekeeping Anchors) 
            Each product, when sold on a Quote, creates a specific Task in the Project.
        -->

        <!-- 1. PROJECT MANAGEMENT -->
        <record id="product_service_pm" model="product.product">
            <field name="name">Project Management</field>
            <field name="type">service</field>
            <field name="service_tracking">task_in_project</field>
            <field name="service_type">timesheet</field>
            <field name="list_price">150.00</field>
            <field name="standard_price">50.00</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="description_sale">Project coordination, meetings, and administration.</field>
            <field name="invoice_policy">delivery</field> <!-- Bill based on hours (timesheets) -->
        </record>

        <!-- 2. DESIGN SERVICES -->
        <record id="product_service_design" model="product.product">
            <field name="name">Design &amp; Submittals</field>
            <field name="type">service</field>
            <field name="service_tracking">task_in_project</field>
            <field name="service_type">timesheet</field>
            <field name="list_price">125.00</field>
            <field name="standard_price">40.00</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="description_sale">Signage design, shop drawings, and submittal packages.</field>
            <field name="invoice_policy">delivery</field>
        </record>

        <!-- 3. PRODUCTION LABOR (The Shop) -->
        <!-- Note: This is an "Service" view of production for quoting/timekeeping -->
        <record id="product_service_production" model="product.product">
            <field name="name">Fabrication Labor</field>
            <field name="type">service</field>
            <field name="service_tracking">task_in_project</field>
            <field name="service_type">timesheet</field>
            <field name="list_price">95.00</field>
            <field name="standard_price">30.00</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="description_sale">Manufacturing, assembly, and quality control.</field>
            <field name="invoice_policy">delivery</field>
        </record>

        <!-- 4. INSTALLATION (Field Service) -->
        <record id="product_service_install" model="product.product">
            <field name="name">Installation Services</field>
            <field name="type">service</field>
            <field name="service_tracking">task_in_project</field>
            <field name="service_type">timesheet</field>
            <field name="list_price">110.00</field>
            <field name="standard_price">35.00</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="description_sale">On-site installation and travel.</field>
            <field name="invoice_policy">delivery</field>
        </record>

    </data>
</odoo>
