            <field name="state">draft</field>
        </record>
        
        <!-- ================================================================= -->
        <!-- DEMO SIGN INSTANCES                                               -->
        <!-- ================================================================= -->
        
        <!-- Type A instances (Room Numbers) -->
        <record id="instance_a_101" model="ps.sign.instance">
