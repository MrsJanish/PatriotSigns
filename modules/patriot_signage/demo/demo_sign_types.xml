<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
        DEMO SIGN TYPES - Test Sign Schedule
        =====================================
        
        Creates sign types for the demo hospital project.
        These link to the CRM lead and use reference tables from patriot_base.
        -->
        
        <!-- ================================================================= -->
        <!-- SIGN TYPE A - Room Number (ADA)                                   -->
        <!-- ================================================================= -->
        <record id="sign_type_a" model="ps.sign.type">
            <field name="name">A</field>
            <field name="opportunity_id" ref="patriot_crm.lead_demo_hospital"/>
            <field name="category_id" ref="patriot_base.category_pan"/>
            <field name="description">Room Number - ADA compliant with braille</field>
            <field name="sequence">10</field>
            
            <!-- Dimensions -->
            <field name="length">6</field>
            <field name="width">8</field>
            
            <!-- Physical Specs -->
            <field name="material">photopolymer</field>
            <field name="finish">matte</field>
            <field name="mounting">wall</field>
            <field name="mounting_height">60</field>
            
            <!-- ADA -->
            <field name="is_ada">True</field>
            <field name="has_tactile">True</field>
            <field name="has_braille">True</field>
            
            <!-- Quantity & Costing -->
            <field name="quantity">85</field>
            <field name="unit_cost">45.00</field>
            <field name="unit_price">75.00</field>
            
            <field name="state">draft</field>
        </record>
        
        <!-- ================================================================= -->
        <!-- SIGN TYPE B - Room ID (ADA)                                       -->
        <!-- ================================================================= -->
        <record id="sign_type_b" model="ps.sign.type">
            <field name="name">B</field>
            <field name="opportunity_id" ref="patriot_crm.lead_demo_hospital"/>
            <field name="category_id" ref="patriot_base.category_pan"/>
            <field name="description">Room ID - Room name with number</field>
            <field name="sequence">20</field>
            
            <field name="length">6</field>
            <field name="width">10</field>
            
            <field name="material">photopolymer</field>
            <field name="finish">matte</field>
            <field name="mounting">wall</field>
            <field name="mounting_height">60</field>
            
            <field name="is_ada">True</field>
            <field name="has_tactile">True</field>
            <field name="has_braille">True</field>
            <field name="has_window">True</field>
            <field name="window_width">5</field>
            <field name="window_height">1</field>
            
            <field name="quantity">42</field>
            <field name="unit_cost">65.00</field>
            <field name="unit_price">110.00</field>
            
            <field name="state">draft</field>
        </record>
        
        <!-- ================================================================= -->
        <!-- SIGN TYPE C - Restroom (ADA)                                      -->
        <!-- ================================================================= -->
        <record id="sign_type_c" model="ps.sign.type">
