            <field name="sequence">30</field>
            
            <field name="length">6</field>
            <field name="width">9</field>
            
            <field name="material">photopolymer</field>
            <field name="finish">matte</field>
            <field name="mounting">wall</field>
            
            <field name="is_ada">True</field>
            <field name="has_tactile">True</field>
            <field name="has_braille">True</field>
            <field name="has_pictogram">True</field>
            <field name="pictogram_type">Restroom</field>
            
            <field name="quantity">24</field>
            <field name="unit_cost">55.00</field>
            <field name="unit_price">95.00</field>
            
            <field name="state">draft</field>
        </record>
        
        <!-- ================================================================= -->
        <!-- SIGN TYPE D - Directional (Overhead)                              -->
        <!-- ================================================================= -->
        <record id="sign_type_d" model="ps.sign.type">
