<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sign Type Tree View -->
    <record id="ps_sign_type_tree" model="ir.ui.view">
        <field name="name">ps.sign.type.tree</field>
        <field name="model">ps.sign.type</field>
        <field name="arch" type="xml">
            <list decoration-muted="state == 'canceled'"
                  decoration-success="state == 'complete'"
                  decoration-info="state == 'production'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="project_alias"/>
                <field name="category_id"/>
                <field name="dimensions_display"/>
                <field name="is_ada" widget="boolean"/>
                <field name="quantity" sum="Total"/>
                <field name="unit_price"/>
                <field name="extended_price" sum="Total"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'complete'"
                       decoration-info="state in ['confirmed', 'ordered', 'production']"
                       decoration-warning="state == 'draft'"
                       decoration-danger="state == 'canceled'"/>
                <field name="supplier_id" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Sign Type Form View -->
    <record id="ps_sign_type_form" model="ir.ui.view">
        <field name="name">ps.sign.type.form</field>
        <field name="model">ps.sign.type</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,ordered,production,complete"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_instances" type="object"
                                class="oe_stat_button" icon="fa-list">
                            <div class="o_stat_info">
                                <field name="instance_count" class="o_stat_value"/>
                                <span class="o_stat_text">Instances</span>
                            </div>
                        </button>
                        <button name="action_view_bookmarks" type="object"
                                class="oe_stat_button" icon="fa-bookmark"
                                invisible="bookmark_count == 0">
                            <div class="o_stat_info">
                                <field name="bookmark_count" class="o_stat_value"/>
                                <span class="o_stat_text">Bookmarks</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g., A, SN-1, RID-1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Project">
                            <field name="opportunity_id"/>
                            <field name="project_alias" readonly="1"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Classification">
                            <field name="category_id"/>
                            <field name="subtype_id" domain="[('category_id', '=', category_id)]"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Specifications" name="specs">
                            <group>
                                <group string="Dimensions">
                                    <field name="dimension_id"/>
                                    <label for="length"/>
                                    <div class="o_row">
                                        <field name="length" class="oe_inline"/>
                                        <span class="oe_inline">Ã—</span>
                                        <field name="width" class="oe_inline"/>
                                        <span class="oe_inline">in</span>
                                    </div>
                                    <field name="depth"/>
                                    <field name="is_round"/>
                                    <field name="diameter" invisible="not is_round"/>
                                    <field name="dimensions_display" readonly="1"/>
                                    <field name="square_inches" readonly="1"/>
                                </group>
                                <group string="Physical">
                                    <field name="material"/>
                                    <field name="finish"/>
                                    <field name="finish_color" invisible="not finish"/>
                                    <field name="mounting"/>
                                    <field name="mounting_height"/>
                                </group>
                            </group>
                            <group>
                                <group string="ADA Compliance">
                                    <field name="is_ada"/>
                                    <field name="has_tactile" invisible="not is_ada"/>
                                    <field name="has_braille" invisible="not is_ada"/>
                                    <field name="has_pictogram"/>
                                    <field name="pictogram_type" invisible="not has_pictogram"/>
                                </group>
                                <group string="Window/Insert">
                                    <field name="has_window"/>
                                    <field name="window_width" invisible="not has_window"/>
                                    <field name="window_height" invisible="not has_window"/>
                                </group>
                            </group>
                            <group>
                                <group string="Illumination">
                                    <field name="is_illuminated"/>
                                    <field name="illumination_type" invisible="not is_illuminated"/>
                                </group>
                                <group string="Content">
                                    <field name="has_custom_copy"/>
                                    <field name="letter_height"/>
                                    <field name="letter_count"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Quantity &amp; Pricing" name="pricing">
                            <group>
                                <group string="Quantity">
                                    <field name="quantity"/>
                                    <field name="qty_source"/>
                                    <field name="added_post_bid"/>
                                </group>
                                <group string="Pricing">
                                    <field name="unit_cost"/>
                                    <field name="unit_price"/>
                                    <field name="install_rate"/>
                                    <field name="extended_price" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Supplier">
                                    <field name="supplier_id"/>
                                </group>
                                <group string="Status">
                                    <field name="confirmed"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Variants &amp; Components" name="variants">
                            <group>
                                <group string="Variant">
                                    <field name="is_variant"/>
                                    <field name="variant_of_id" invisible="not is_variant"/>
                                </group>
                                <group string="Component">
                                    <field name="is_component"/>
                                    <field name="component_of_id" invisible="not is_component"/>
                                </group>
                            </group>
                            <group>
                                <group string="Backer">
                                    <field name="is_backer"/>
                                    <field name="backer_id" invisible="is_backer"/>
                                </group>
                                <group string="Replacement">
                                    <field name="replaced_by_id"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Instances" name="instances">
                            <field name="instance_ids" mode="list">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="room_number_plans"/>
                                    <field name="room_name_plans"/>
                                    <field name="copy_line_1"/>
                                    <field name="copy_line_2"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Notes" name="notes">
                            <field name="description" placeholder="Description..."/>
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Sign Type Kanban View -->
    <record id="ps_sign_type_kanban" model="ir.ui.view">
        <field name="name">ps.sign.type.kanban</field>
        <field name="model">ps.sign.type</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="id"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="dimensions_display"/>
                <field name="quantity"/>
                <field name="state"/>
                <field name="is_ada"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_content">
                            <strong>
                                <field name="name"/>
                                <span class="badge text-bg-info ms-2" t-if="record.is_ada.raw_value">ADA</span>
                            </strong>
                            <div class="text-muted">
                                <field name="category_id"/>
                            </div>
                            <div>
                                <field name="dimensions_display"/>
                            </div>
                            <div class="mt-1">
                                <span class="badge text-bg-secondary">
                                    Qty: <field name="quantity"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Sign Type Search View -->
    <record id="ps_sign_type_search" model="ir.ui.view">
        <field name="name">ps.sign.type.search</field>
        <field name="model">ps.sign.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="opportunity_id"/>
                <field name="project_alias"/>
                <field name="category_id"/>
                <field name="supplier_id"/>
                <filter name="ada" string="ADA Signs" domain="[('is_ada', '=', True)]"/>
                <filter name="illuminated" string="Illuminated" domain="[('is_illuminated', '=', True)]"/>
                <filter name="confirmed" string="Confirmed" domain="[('confirmed', '=', True)]"/>
                <separator/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="production" string="In Production" domain="[('state', '=', 'production')]"/>
                <filter name="complete" string="Complete" domain="[('state', '=', 'complete')]"/>
                <separator/>
                <filter name="group_project" string="Project" context="{'group_by': 'opportunity_id'}"/>
                <filter name="group_category" string="Category" context="{'group_by': 'category_id'}"/>
                <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                <filter name="group_supplier" string="Supplier" context="{'group_by': 'supplier_id'}"/>
            </search>
        </field>
    </record>

    <!-- Sign Type Action -->
    <record id="ps_sign_type_action" model="ir.actions.act_window">
        <field name="name">Sign Types</field>
        <field name="res_model">ps.sign.type</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_group_project': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first sign type
            </p>
            <p>
                Sign types define the specifications for each type of sign in a project.
                Each sign type belongs to ONE project - the same ID in different projects
                represents different signs.
            </p>
        </field>
    </record>

    <!-- ================================================================== -->
    <!-- SIGN TYPE TEMPLATE VIEWS                                           -->
    <!-- ================================================================== -->
    
    <!-- Sign Type Template Tree View -->
    <record id="ps_sign_type_template_tree" model="ir.ui.view">
        <field name="name">ps.sign.type.template.tree</field>
        <field name="model">ps.sign.type.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="width"/>
                <field name="length"/>
                <field name="default_unit_price"/>
                <field name="is_ada"/>
                <field name="use_count"/>
            </list>
        </field>
    </record>
    
    <!-- Sign Type Template Form View -->
    <record id="ps_sign_type_template_form" model="ir.ui.view">
        <field name="name">ps.sign.type.template.form</field>
        <field name="model">ps.sign.type.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Basic Info">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="category_id"/>
                        </group>
                        <group string="Dimensions &amp; Pricing">
                            <field name="width"/>
                            <field name="length"/>
                            <field name="default_unit_price"/>
                        </group>
                    </group>
                    <group>
                        <group string="ADA">
                            <field name="is_ada"/>
                            <field name="has_tactile"/>
                            <field name="has_braille"/>
                        </group>
                        <group string="Usage">
                            <field name="use_count" readonly="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Description..."/>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Sign Type Template Action -->
    <record id="ps_sign_type_template_action" model="ir.actions.act_window">
        <field name="name">Sign Templates</field>
        <field name="res_model">ps.sign.type.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a sign type template
            </p>
            <p>
                Templates allow you to quickly create sign types with pre-filled values.
            </p>
        </field>
    </record>
</odoo>
