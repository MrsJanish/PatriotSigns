<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        CRM Lead view extensions for sign types and profitability.
        These views are in patriot_signage (not patriot_crm) because
        they reference ps.sign.type which is defined in this module.
    -->
    
    <!-- Add Sign Types stat button to CRM Lead form -->
    <record id="crm_lead_form_inherit_signage" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.signage</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <!-- Add stat button for sign types -->
            <div name="button_box" position="inside">
                <button name="action_view_sign_types" type="object"
                        class="oe_stat_button" icon="fa-list-ul"
                        invisible="sign_type_count == 0">
                    <div class="o_stat_info">
                        <field name="sign_type_count" class="o_stat_value"/>
                        <span class="o_stat_text">Sign Types</span>
                    </div>
                </button>
            </div>
            
            <!-- Add Sign Schedule page after documents -->
            <page name="extra" position="after">
            <page string="Sign Schedule" name="sign_schedule">
                    <div class="alert alert-info" role="alert">
                        <strong>Quick Add:</strong> Select a Template to auto-fill dimensions and pricing.
                    </div>
                    <field name="sign_type_ids" nolabel="1">
                        <list>
                            <field name="template_id" string="Template" options="{'no_create': True}"/>
                            <field name="name" string="Type ID"/>
                            <field name="category_id"/>
                            <field name="product_id" string="Product" optional="hide"
                                   options="{'no_create': True}"/>
                            <field name="quantity" sum="Total Signs"/>
                            <field name="width" string="W"/>
                            <field name="length" string="L"/>
                            <field name="is_ada" column_invisible="1"/>
                            <field name="unit_cost" string="Cost/ea" optional="hide"/>
                            <field name="unit_price" string="Price/ea"/>
                            <field name="extended_price" string="Total $" sum="Bid Total"/>
                            <field name="profit_margin_pct" string="Margin %" optional="hide"/>
                        </list>
                    </field>
                    
                    <!-- PROJECT PROFITABILITY SUMMARY -->
                    <group string="Project Profitability">
                        <group>
                            <field name="sign_type_count" string="Sign Types"/>
                            <field name="total_sign_quantity" string="Total Signs"/>
                        </group>
                        <group>
                            <field name="total_bid_price" string="Bid Total $"/>
                            <field name="total_project_cost" string="Cost Total $"/>
                            <field name="total_profit" string="Profit $"/>
                            <field name="project_margin_pct" string="Margin %" widget="progressbar"/>
                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <!-- Add profitability to leads tree view -->
    <record id="crm_lead_tree_inherit_signage" model="ir.ui.view">
        <field name="name">crm.lead.tree.inherit.signage</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_leads"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="sign_type_count" optional="show"/>
                <field name="total_sign_quantity" optional="show"/>
                <field name="total_bid_price" string="Bid $" optional="hide"/>
                <field name="total_profit" string="Profit $" optional="hide"/>
                <field name="project_margin_pct" string="Margin %" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Add sign types filter to search view -->
    <record id="crm_lead_search_inherit_signage" model="ir.ui.view">
        <field name="name">crm.lead.search.inherit.signage</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter name="has_sign_types" string="Has Sign Types" 
                        domain="[('sign_type_count', '&gt;', 0)]"/>
                <filter name="profitable" string="Profitable (>20%)" 
                        domain="[('project_margin_pct', '&gt;', 20)]"/>
            </xpath>
        </field>
    </record>

</odoo>
