<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="patriot_timeclock.TimeClockKiosk">
        <div class="o_time_clock_kiosk">
            <t t-if="state.loading">
                <div class="text-center">
                    <i class="fa fa-spinner fa-spin fa-3x"></i>
                    <p>Loading...</p>
                </div>
            </t>
            
            <t t-else="">
                <!-- Header -->
                <h1 class="mb-4">Time Clock</h1>
                
                <!-- Current Status -->
                <div t-if="state.isClockedIn" class="o_time_clock_status clocked-in">
                    <div class="alert alert-success">
                        <h4>Currently Clocked In</h4>
                        <p class="o_time_clock_project">
                            <strong>Project:</strong> <t t-esc="state.currentProject"/>
                        </p>
                        <div class="o_time_clock_duration">
                            <t t-esc="state.currentDuration"/>
                        </div>
                    </div>
                </div>
                
                <div t-else="" class="o_time_clock_status clocked-out">
                    <div class="alert alert-secondary">
                        <h4>Not Clocked In</h4>
                        <p>Select a project and clock in to start tracking time.</p>
                    </div>
                </div>
                
                <!-- Project Selector -->
                <div class="o_time_clock_project_selector mt-4">
                    <label class="form-label"><strong>Project:</strong></label>
                    <select class="form-select form-select-lg" t-on-change="onProjectChange">
                        <option value="">-- Select Project --</option>
                        <t t-foreach="state.projects" t-as="project" t-key="project.id">
                            <option t-att-value="project.id">
                                <t t-esc="project.name"/>
                            </option>
                        </t>
                    </select>
                </div>
                
                <!-- Notes -->
                <div class="mt-3" style="width: 100%; max-width: 400px;">
                    <label class="form-label">Notes (optional):</label>
                    <textarea class="form-control" rows="2" 
                              placeholder="What are you working on?"
                              t-on-change="onNotesChange"></textarea>
                </div>
                
                <!-- Buttons -->
                <div class="o_time_clock_buttons mt-4">
                    <t t-if="!state.isClockedIn">
                        <button class="btn o_time_clock_btn clock-in" t-on-click="clockIn">
                            üïê Clock In
                        </button>
                    </t>
                    
                    <t t-else="">
                        <button class="btn o_time_clock_btn clock-out" t-on-click="clockOut">
                            üõë Clock Out
                        </button>
                        <button class="btn o_time_clock_btn switch-project" t-on-click="switchProject">
                            üîÑ Switch Project
                        </button>
                    </t>
                </div>
            </t>
        </div>
    </t>

</templates>
