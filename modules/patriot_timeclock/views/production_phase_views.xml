<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Production Phase Views -->

    <record id="view_production_phase_tree" model="ir.ui.view">
        <field name="name">ps.production.phase.tree</field>
        <field name="model">ps.production.phase</field>
        <field name="arch" type="xml">
            <list string="Production Phases" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="color" widget="color_picker"/>
                <field name="default_hours_per_sign"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_production_phase_form" model="ir.ui.view">
        <field name="name">ps.production.phase.form</field>
        <field name="model">ps.production.phase</field>
        <field name="arch" type="xml">
            <form string="Production Phase">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="default_hours_per_sign"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Describe what happens in this phase..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_production_phases" model="ir.actions.act_window">
        <field name="name">Production Phases</field>
        <field name="res_model">ps.production.phase</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define production phases
            </p>
            <p>
                Production phases define the stages of sign manufacturing (Design, Fab, Sand, Pack, etc.)
            </p>
        </field>
    </record>
</odoo>
