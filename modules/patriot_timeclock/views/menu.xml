<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Time Clock App - Standalone -->
    
    <!-- Root menu - appears on home screen -->
    <menuitem id="menu_timeclock_app"
              name="Time Clock"
              web_icon="patriot_timeclock,static/description/icon.svg"
              sequence="50"/>

    <!-- Clock In / Out - main action -->
    <menuitem id="menu_time_clock_kiosk"
              name="Clock In / Out"
              parent="menu_timeclock_app"
              action="ps_time_clock_kiosk_action"
              sequence="1"/>

    <!-- My Time -->
    <menuitem id="menu_my_time"
              name="My Time"
              parent="menu_timeclock_app"
              action="ps_time_punch_my_action"
              sequence="10"/>

    <!-- All Time Punches (managers) -->
    <menuitem id="menu_all_time_punches"
              name="All Time Punches"
              parent="menu_timeclock_app"
              action="ps_time_punch_action"
              groups="hr.group_hr_manager"
              sequence="20"/>

</odoo>
