<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Manager Work Assignment Kanban View -->
    <record id="view_project_task_work_assignment_kanban" model="ir.ui.view">
        <field name="name">project.task.work.assignment.kanban</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="work_state" class="o_kanban_small_column">
                <field name="id"/>
                <field name="name"/>
                <field name="project_id"/>
                <field name="phase_id"/>
                <field name="assigned_user_ids"/>
                <field name="work_state"/>
                <field name="is_currently_worked"/>
                <field name="current_worker_id"/>
                <field name="allocated_hours"/>
                <field name="actual_hours"/>
                <field name="color"/>
                <templates>
                    <t t-name="card" class="oe_kanban_global_click">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="o_dropdown_kanban dropdown">
                                    <t t-if="is_currently_worked">
                                        <span class="badge bg-success">
                                            <i class="fa fa-play"/> Working
                                        </span>
                                    </t>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="text-muted mb-1">
                                    <i class="fa fa-folder-open me-1"/>
                                    <field name="project_id"/>
                                </div>
                                <div t-if="record.phase_id.value" class="mb-1">
                                    <span class="badge bg-info">
                                        <field name="phase_id"/>
                                    </span>
                                </div>
                                <div t-if="record.current_worker_id.value" class="text-success small">
                                    <i class="fa fa-user me-1"/>
                                    <field name="current_worker_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-2">
                                <div class="oe_kanban_bottom_left">
                                    <span t-if="record.allocated_hours.raw_value" class="small text-muted">
                                        Est: <field name="allocated_hours"/>h
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="assigned_user_ids" widget="many2many_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Manager Work Assignment Tree View -->
    <record id="view_project_task_work_assignment_tree" model="ir.ui.view">
        <field name="name">project.task.work.assignment.tree</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <list string="Work Assignment" editable="bottom" multi_edit="1">
                <field name="priority_sequence" optional="hide"/>
                <field name="name"/>
                <field name="project_id"/>
                <field name="phase_id"/>
                <field name="work_state" widget="badge" 
                       decoration-info="work_state == 'assigned'"
                       decoration-success="work_state == 'in_progress'"
                       decoration-muted="work_state == 'complete'"
                       decoration-primary="work_state == 'verified'"/>
                <field name="assigned_user_ids" widget="many2many_avatar_user"/>
                <field name="is_currently_worked" string="Active" widget="boolean"/>
                <field name="current_worker_id" string="Worker"/>
                <field name="allocated_hours" string="Est. Hours"/>
                <field name="actual_hours" string="Actual"/>
            </list>
        </field>
    </record>

    <!-- Manager Work Assignment Form (quick assign) -->
    <record id="view_project_task_work_assignment_form" model="ir.ui.view">
        <field name="name">project.task.work.assignment.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_ids']" position="after">
                <field name="phase_id" placeholder="Production Phase"/>
                <field name="work_state"/>
                <field name="assigned_user_ids" widget="many2many_tags" placeholder="Assign Workers"/>
                <field name="priority_sequence"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Work Tracking" name="work_tracking">
                    <group>
                        <group string="Assignment">
                            <field name="assigned_by" readonly="1"/>
                            <field name="assigned_date" readonly="1"/>
                        </group>
                        <group string="Verification">
                            <field name="is_verified"/>
                            <field name="verified_by" readonly="1"/>
                            <field name="verified_date" readonly="1"/>
                        </group>
                    </group>
                    <group string="Time">
                        <field name="actual_hours"/>
                        <field name="is_currently_worked"/>
                        <field name="current_worker_id"/>
                    </group>
                    <group string="QR Code" name="qr_code">
                        <field name="task_barcode"/>
                        <field name="qr_code_image" widget="image" class="oe_avatar"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Manager Work Assignment Action -->
    <record id="action_work_assignment" model="ir.actions.act_window">
        <field name="name">Work Assignment</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('work_state', 'not in', ['verified'])]</field>
        <field name="context">{
            'default_work_state': 'not_started',
            'search_default_group_by_project': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Assign work to employees
            </p>
            <p>
                Drag tasks to assign them to workers. Track who's working on what in real-time.
            </p>
        </field>
    </record>

    <!-- Search View for Assignment -->
    <record id="view_project_task_work_assignment_search" model="ir.ui.view">
        <field name="name">project.task.work.assignment.search</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <search string="Work Assignment">
                <field name="name"/>
                <field name="project_id"/>
                <field name="phase_id"/>
                <field name="assigned_user_ids"/>
                <filter name="not_started" string="Not Started" domain="[('work_state', '=', 'not_started')]"/>
                <filter name="assigned" string="Assigned" domain="[('work_state', '=', 'assigned')]"/>
                <filter name="in_progress" string="In Progress" domain="[('work_state', '=', 'in_progress')]"/>
                <filter name="complete" string="Complete" domain="[('work_state', '=', 'complete')]"/>
                <separator/>
                <group string="Group By">
                    <filter name="group_by_project" string="Project" context="{'group_by': 'project_id'}"/>
                    <filter name="group_by_phase" string="Phase" context="{'group_by': 'phase_id'}"/>
                    <filter name="group_by_state" string="Work State" context="{'group_by': 'work_state'}"/>
                    <filter name="group_by_assigned" string="Assigned To" context="{'group_by': 'assigned_user_ids'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
