<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Time Clock Kiosk Form View -->
    <record id="ps_time_clock_kiosk_form" model="ir.ui.view">
        <field name="name">ps.time.clock.kiosk.form</field>
        <field name="model">ps.time.clock.kiosk</field>
        <field name="arch" type="xml">
            <form create="0" edit="1" delete="0">
                <sheet>
                    <!-- Hidden fields -->
                    <field name="is_clocked_in" invisible="1"/>
                    <field name="active_punch_id" invisible="1"/>
                    <field name="employee_id" invisible="1"/>
                    
                    <!-- CLOCKED IN STATE -->
                    <div invisible="not is_clocked_in" style="background: #28a745; color: white; padding: 30px; border-radius: 8px; text-align: center; margin-bottom: 30px;">
                        <h2 style="margin: 0 0 15px 0; font-weight: 600;">‚è±Ô∏è CLOCKED IN</h2>
                        <div style="font-size: 24px; margin-bottom: 10px;">
                            <field name="current_project_id" readonly="1" nolabel="1" style="font-weight: bold;"/>
                        </div>
                        <div style="font-size: 48px; font-weight: bold;">
                            <field name="current_duration" readonly="1" nolabel="1"/>
                        </div>
                    </div>
                    
                    <!-- NOT CLOCKED IN STATE -->
                    <div invisible="is_clocked_in" style="background: #6c757d; color: white; padding: 30px; border-radius: 8px; text-align: center; margin-bottom: 30px;">
                        <h2 style="margin: 0; font-weight: 600;">‚è∏Ô∏è NOT CLOCKED IN</h2>
                        <p style="margin: 10px 0 0 0; opacity: 0.8;">Select a project below to clock in</p>
                    </div>
                    
                    <!-- Project Selection -->
                    <group col="1">
                        <field name="project_id" string="Project" 
                               placeholder="Select project..."
                               options="{'no_create': True}"/>
                        <field name="task_id" string="Task" 
                               placeholder="(Optional)"
                               options="{'no_create': True}"/>
                        <field name="notes" string="Notes" 
                               placeholder="(Optional) What are you working on?"/>
                    </group>
                    
                    <!-- BIG Action Buttons -->
                    <div style="text-align: center; padding: 20px 0;">
                        <button name="action_clock_in" 
                                string="‚è±Ô∏è CLOCK IN" 
                                type="object"
                                class="btn-success"
                                style="font-size: 20px; padding: 15px 50px; margin: 5px;"/>
                        
                        <button name="action_clock_out" 
                                string="üõë CLOCK OUT" 
                                type="object"
                                class="btn-danger"
                                invisible="not is_clocked_in"
                                style="font-size: 20px; padding: 15px 50px; margin: 5px;"/>
                        
                        <button name="action_take_break" 
                                string="‚òï BREAK" 
                                type="object"
                                class="btn-warning"
                                invisible="not is_clocked_in"
                                style="font-size: 20px; padding: 15px 40px; margin: 5px;"/>
                    </div>
                    
                </sheet>
            </form>
        </field>
    </record>

    <!-- Time Clock Action -->
    <record id="ps_time_clock_kiosk_action" model="ir.actions.act_window">
        <field name="name">Clock In / Out</field>
        <field name="res_model">ps.time.clock.kiosk</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'form_view_initial_mode': 'edit'}</field>
    </record>

</odoo>
