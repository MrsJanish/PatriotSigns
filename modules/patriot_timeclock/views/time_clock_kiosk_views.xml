<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Time Clock Kiosk Form View - Default Odoo Styling -->
    <record id="ps_time_clock_kiosk_form" model="ir.ui.view">
        <field name="name">ps.time.clock.kiosk.form</field>
        <field name="model">ps.time.clock.kiosk</field>
        <field name="arch" type="xml">
            <form create="0" edit="1" delete="0">
                <sheet>
                    <!-- Hidden fields -->
                    <field name="is_clocked_in" invisible="1"/>
                    <field name="active_punch_id" invisible="1"/>
                    <field name="employee_id" invisible="1"/>
                    
                    <!-- Status using Odoo's alert classes -->
                    <div class="alert alert-success" role="alert" invisible="not is_clocked_in">
                        <h4 class="alert-heading">⏱️ Clocked In</h4>
                        <p><strong>Project:</strong> <field name="current_project_id" readonly="1" nolabel="1"/></p>
                        <p><strong>Time:</strong> <field name="current_duration" readonly="1" nolabel="1"/></p>
                    </div>
                    
                    <div class="alert alert-secondary" role="alert" invisible="is_clocked_in">
                        <h4 class="alert-heading">⏸️ Not Clocked In</h4>
                        <p>Select a project below to clock in.</p>
                    </div>
                    
                    <!-- Standard Odoo form groups -->
                    <group>
                        <field name="project_id" 
                               placeholder="Select project..."
                               options="{'no_create': True}"/>
                        <field name="task_id" 
                               placeholder="(Optional)"
                               options="{'no_create': True}"/>
                        <field name="notes" 
                               placeholder="(Optional)"/>
                    </group>
                    
                </sheet>
                
                <!-- Standard Odoo footer buttons -->
                <footer>
                    <button name="action_clock_in" 
                            string="Clock In" 
                            type="object"
                            class="btn-primary"/>
                    
                    <button name="action_clock_out" 
                            string="Clock Out" 
                            type="object"
                            class="btn-danger"
                            invisible="not is_clocked_in"/>
                    
                    <button name="action_take_break" 
                            string="Break" 
                            type="object"
                            class="btn-secondary"
                            invisible="not is_clocked_in"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Time Clock Action -->
    <record id="ps_time_clock_kiosk_action" model="ir.actions.act_window">
        <field name="name">Clock In / Out</field>
        <field name="res_model">ps.time.clock.kiosk</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'form_view_initial_mode': 'edit'}</field>
    </record>

</odoo>
