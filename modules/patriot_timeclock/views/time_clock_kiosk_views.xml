<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Time Clock Kiosk Form View - Professional -->
    <record id="ps_time_clock_kiosk_form" model="ir.ui.view">
        <field name="name">ps.time.clock.kiosk.form</field>
        <field name="model">ps.time.clock.kiosk</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <sheet>
                    <!-- Hidden fields -->
                    <field name="is_clocked_in" invisible="1"/>
                    <field name="active_punch_id" invisible="1"/>
                    
                    <!-- Employee Info - Large -->
                    <div class="oe_title mb-3">
                        <h1>
                            <field name="employee_id" widget="many2one_avatar_employee" 
                                   readonly="1" options="{'no_open': True}"/>
                        </h1>
                    </div>
                    
                    <!-- Status - Simple bold text -->
                    <div class="mb-4">
                        <span class="fw-bold text-success fs-4" invisible="not is_clocked_in">
                            On Site
                        </span>
                        <span class="fw-bold text-info fs-4" invisible="is_clocked_in">
                            Off Site
                        </span>
                    </div>
                    
                    <!-- Current work info when on site -->
                    <group invisible="not is_clocked_in">
                        <field name="current_project_id" string="Working on" readonly="1"/>
                        <field name="current_duration" string="Duration" readonly="1"/>
                    </group>

                    <separator/>
                    
                    <!-- Project Selection -->
                    <group>
                        <field name="project_id" string="Project" 
                               options="{'no_create': True}"/>
                        <field name="task_id" string="Task" 
                               options="{'no_create': True}"
                               domain="[('project_id', '=', project_id), '|', ('user_ids', 'in', uid), ('user_ids', '=', False)]"/>
                        <field name="notes" string="Notes"/>
                    </group>
                    
                    <!-- Action Buttons -->
                    <div class="mt-4">
                        <button name="action_clock_in" 
                                string="Start" 
                                type="object"
                                class="btn-primary oe_highlight o_wide_btn"/>
                        
                        <button name="action_clock_out" 
                                string="Stop" 
                                type="object"
                                class="btn-secondary"
                                invisible="not is_clocked_in"/>
                        
                        <button name="action_take_break" 
                                string="Break" 
                                type="object"
                                class="btn-secondary"
                                invisible="not is_clocked_in"/>
                    </div>
                    
                </sheet>
            </form>
        </field>
    </record>

    <!-- Time Clock Action -->
    <record id="ps_time_clock_kiosk_action" model="ir.actions.act_window">
        <field name="name">Clock In / Out</field>
        <field name="res_model">ps.time.clock.kiosk</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'form_view_initial_mode': 'edit'}</field>
    </record>

</odoo>
