<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Time Clock Kiosk Form View - Professional -->
    <record id="ps_time_clock_kiosk_form" model="ir.ui.view">
        <field name="name">ps.time.clock.kiosk.form</field>
        <field name="model">ps.time.clock.kiosk</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <sheet>
                    <!-- Hidden fields -->
                    <field name="is_clocked_in" invisible="1"/>
                    <field name="active_punch_id" invisible="1"/>
                    <field name="recommended_task_id" invisible="1"/>
                    
                    <!-- Employee Info - Large -->
                    <div class="oe_title mb-3">
                        <h1>
                            <field name="employee_id" widget="many2one_avatar_employee" 
                                   readonly="1" options="{'no_open': True}"/>
                        </h1>
                    </div>
                    
                    <!-- Status - Simple bold text -->
                    <div class="mb-4">
                        <span class="fw-bold text-success fs-4" invisible="not is_clocked_in">
                            On Site
                        </span>
                        <span class="fw-bold text-info fs-4" invisible="is_clocked_in">
                            Off Site
                        </span>
                    </div>
                    
                    <!-- Current work info when on site -->
                    <group invisible="not is_clocked_in">
                        <field name="current_work_item" string="Working on" readonly="1"/>
                        <field name="current_duration" string="Duration" readonly="1"/>
                    </group>

                    <separator/>
                    
                    <!-- RECOMMENDED TASK - Prominent when available -->
                    <div class="alert alert-success mb-3" invisible="not recommended_task_id or is_clocked_in">
                        <h3 class="mb-2">Your Next Task</h3>
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <field name="recommended_task_id" readonly="1" 
                                       options="{'no_open': True}" class="fs-5 fw-bold"/>
                            </div>
                            <button name="action_clock_in" 
                                    string="Start This Task" 
                                    type="object"
                                    class="btn-success btn-lg oe_highlight"/>
                        </div>
                    </div>
                    
                    <!-- Your other assigned tasks -->
                    <group string="Your Assigned Tasks" invisible="is_clocked_in">
                        <field name="assigned_task_ids" widget="many2many_tags" 
                               readonly="1" options="{'color_field': 'color'}"/>
                    </group>
                    
                    <separator string="Or Select Manually" invisible="is_clocked_in"/>
                    
                    <!-- Manual Work Selection: Project OR Opportunity -->
                    <group invisible="is_clocked_in">
                        <field name="project_id" string="Project" 
                               placeholder="Select a won project..."
                               options="{'no_create': True}"/>
                        <field name="opportunity_id" string="Opportunity (Bidding/Submittals)"
                               placeholder="...or select opportunity for bidding work"
                               options="{'no_create': True}"/>
                        <field name="task_id" string="Task" 
                               placeholder="(Optional)"
                               options="{'no_create': True}"
                               invisible="not project_id"
                               domain="[('project_id', '=', project_id), '|', ('user_ids', 'in', uid), ('user_ids', '=', False)]"/>
                        <field name="notes" string="Notes"/>
                    </group>
                    
                    <!-- Action Buttons -->
                    <div class="mt-4">
                        <button name="action_clock_in" 
                                string="Start" 
                                type="object"
                                class="btn-primary oe_highlight o_wide_btn"
                                invisible="recommended_task_id and not is_clocked_in"/>
                        
                        <button name="action_clock_out" 
                                string="Stop" 
                                type="object"
                                class="btn-secondary"
                                invisible="not is_clocked_in"/>
                        
                        <button name="action_take_break" 
                                string="Break" 
                                type="object"
                                class="btn-secondary"
                                invisible="not is_clocked_in"/>
                    </div>
                    
                </sheet>
            </form>
        </field>
    </record>

    <!-- Time Clock Action -->
    <record id="ps_time_clock_kiosk_action" model="ir.actions.act_window">
        <field name="name">Clock In / Out</field>
        <field name="res_model">ps.time.clock.kiosk</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'form_view_initial_mode': 'edit'}</field>
    </record>

</odoo>
