<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Time Clock Kiosk Form View - Clean centered design -->
    <record id="ps_time_clock_kiosk_form" model="ir.ui.view">
        <field name="name">ps.time.clock.kiosk.form</field>
        <field name="model">ps.time.clock.kiosk</field>
        <field name="arch" type="xml">
            <form create="0" edit="1" delete="0">
                <field name="is_clocked_in" invisible="1"/>
                <field name="active_punch_id" invisible="1"/>
                <field name="employee_id" invisible="1"/>
                <field name="current_project_id" invisible="1"/>
                <field name="current_duration" invisible="1"/>
                
                <div class="container-fluid" style="max-width: 600px; margin: 0 auto; padding: 40px 20px;">
                    
                    <!-- Status Card -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-body text-center py-4 bg-success text-white" invisible="not is_clocked_in">
                            <h4 class="mb-0">‚è±Ô∏è Currently Working</h4>
                        </div>
                        <div class="card-body text-center py-4 bg-secondary text-white" invisible="is_clocked_in">
                            <h4 class="mb-0">‚è∏Ô∏è Not Clocked In</h4>
                        </div>
                        <div class="card-body text-center" invisible="not is_clocked_in">
                            <p class="text-muted mb-1">Project</p>
                            <h4 class="mb-3"><field name="current_project_id" readonly="1" nolabel="1"/></h4>
                            <p class="text-muted mb-1">Time</p>
                            <h2 class="text-primary mb-0">
                                <field name="current_duration" readonly="1" nolabel="1"/>
                            </h2>
                        </div>
                    </div>
                    
                    <!-- Project Selection Card -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header">
                            <strong invisible="is_clocked_in">üéØ Select Project</strong>
                            <strong invisible="not is_clocked_in">üîÑ Switch Project</strong>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Project</label>
                                <field name="project_id" 
                                       placeholder="Select a project..."
                                       options="{'no_create': True}"
                                       nolabel="1"/>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Task (optional)</label>
                                <field name="task_id" 
                                       placeholder="Select a task..."
                                       options="{'no_create': True}"
                                       nolabel="1"/>
                            </div>
                            <div>
                                <label class="form-label">Notes (optional)</label>
                                <field name="notes" 
                                       placeholder="What are you working on?"
                                       nolabel="1"/>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Action Buttons in footer area -->
                    <div class="text-center">
                        <button name="action_clock_in" 
                                string="üïê Clock In" 
                                type="object"
                                class="btn btn-success btn-lg me-2"/>
                        
                        <button name="action_clock_out" 
                                string="üõë Clock Out" 
                                type="object"
                                class="btn btn-danger btn-lg me-2"
                                invisible="not is_clocked_in"/>
                        
                        <button name="action_take_break" 
                                string="‚òï Break" 
                                type="object"
                                class="btn btn-warning btn-lg"
                                invisible="not is_clocked_in"/>
                    </div>
                    
                </div>
            </form>
        </field>
    </record>

    <!-- Time Clock Kiosk Action - opens as main page -->
    <record id="ps_time_clock_kiosk_action" model="ir.actions.act_window">
        <field name="name">Time Clock</field>
        <field name="res_model">ps.time.clock.kiosk</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'form_view_initial_mode': 'edit'}</field>
    </record>

</odoo>
